{% extends '/dashboard/base.html.twig' %}

{% block title %}Détails de l'Événement - {{ evennement.nomEvent }}{% endblock %}

{% block content %}
<div class="content container-fluid" style="margin-top: -52%;">
    <div class="row">
        <div class="col-xl-12 col-sm-12 col-12">
            <div class="breadcrumb-path mb-4">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_evennement_index') }}">Événements</a></li>
                    <li class="breadcrumb-item active">Détails</li>
                </ul>
                <h3>Détails de l'Événement</h3>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-titles">{{ evennement.nomEvent }} <span>Toutes les informations sur cet événement</span></h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card stat-card">
                                <div class="card-body">
                                    <div class="stat-card-header">
                                        <h5 class="card-title">Lieu</h5>
                                    </div>
                                    <div class="stat-card-body">
                                        <div class="stats-info">
                                            <div class="stats-detail">
                                                <span class="stats-icon bg-primary-light">
                                                    <i class="fas fa-map-marker-alt"></i>
                                                </span>
                                                <h6 class="stats-count">{{ evennement.lieuEvent }}</h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card stat-card">
                                <div class="card-body">
                                    <div class="stat-card-header">
                                        <h5 class="card-title">Date</h5>
                                    </div>
                                    <div class="stat-card-body">
                                        <div class="stats-info">
                                            <div class="stats-detail">
                                                <span class="stats-icon bg-success-light">
                                                    <i class="far fa-calendar-alt"></i>
                                                </span>
                                                <h6 class="stats-count">{{ evennement.dateEvent ? evennement.dateEvent|date('d/m/Y H:i') : 'N/A' }}</h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card stat-card">
                                <div class="card-body">
                                    <div class="stat-card-header">
                                        <h5 class="card-title">Capacité</h5>
                                    </div>
                                    <div class="stat-card-body">
                                        <div class="stats-info">
                                            <div class="stats-detail">
                                                <span class="stats-icon bg-info-light">
                                                    <i class="fas fa-users"></i>
                                                </span>
                                                <h6 class="stats-count">{{ evennement.capaciteEvent }} personnes</h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-xl-12 col-sm-12 col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title">Description</h5>
                                </div>
                                <div class="card-body">
                                    <div class="activity-detail">
                                        <div class="activity-content">
                                            <p>{{ evennement.descEvent }}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-xl-12 col-sm-12 col-12">
                            <div class="form-btn text-right">
                                <a href="{{ path('app_evennement_index') }}" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Retour à la liste
                                </a>
                                <a href="{{ path('app_evennement_edit', {'idEvent': evennement.idEvent}) }}" class="btn btn-primary">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                                
                                <form method="post" action="{{ path('app_evennement_delete', {'idEvent': evennement.idEvent}) }}" style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evennement.idEvent) }}">
                                    <button class="btn btn-danger">
                                        <i class="fas fa-trash-alt"></i> Supprimer
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <h4>Localisation de l'événement</h4>
<p><strong>Adresse :</strong> {{ evennement.lieuEvent }}</p>
<div id="map" style="height: 400px;"></div>

<script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"></script>
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css" />

<script>
    const address = "{{ evennement.lieuEvent|e('js') }}";

    fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(address)}`)
        .then(response => response.json())
        .then(data => {
            if (data.length > 0) {
                const lat = data[0].lat;
                const lon = data[0].lon;

                const map = L.map('map').setView([lat, lon], 13);

                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '© OpenStreetMap contributors'
                }).addTo(map);

                L.marker([lat, lon]).addTo(map)
                    .bindPopup(address)
                    .openPopup();
            } else {
                document.getElementById('map').innerHTML = 'Adresse introuvable.';
            }
        })
        .catch(error => {
            console.error('Erreur de géocodage :', error);
            document.getElementById('map').innerHTML = 'Erreur lors du chargement de la carte.';
        });
</script>

</div>
{% endblock %}