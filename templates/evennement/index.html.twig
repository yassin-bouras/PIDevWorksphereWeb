{% extends '/home/index.html.twig' %}

{% block title %} Événements {% endblock %}

{% block body %}
    <div class="container" style="margin-top:10%;">
        <h1 class="text-center mb-4">Liste des Événements</h1>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Lieu</th>
                    <th>Capacité</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for evenement in evennements %}
                    <tr>
                        
                        <td>{{ evenement.nomEvent }}</td>
                        <td>{{ evenement.descEvent }}</td>
                        <td>{{ evenement.dateEvent ? evenement.dateEvent|date('Y-m-d H:i:s') : 'N/A' }}</td>
                        <td>{{ evenement.lieuEvent }}</td>
                        <td>{{ evenement.capaciteEvent }}</td>
                        <td>
                            <a class="btn btn-info btn-sm" href="{{ path('app_evennement_show', {'idEvent': evenement.idEvent}) }}">Voir</a>
                            <a class="btn btn-warning btn-sm" href="{{ path('app_evennement_edit', {'idEvent': evenement.idEvent}) }}">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center">Aucun événement trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="text-center">
            <a href="{{ path('app_evennement_new') }}" class="btn btn-success">Créer un nouvel événement</a>
        </div>
    </div>
{% endblock %}
