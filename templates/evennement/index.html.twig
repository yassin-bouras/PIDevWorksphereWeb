{% extends '/dashboard/base.html.twig' %}

{% block title %}Événements{% endblock %}

{% block content %}
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-12">
                    <h3 class="page-title">Liste des Événements</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Dashboard</a></li>
                        <li class="breadcrumb-item active">Événements</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="text-end mb-4">
                            <a href="{{ path('app_evennement_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Créer un nouvel événement
                            </a>
                        </div>

                        <div class="mb-4">
                            <form method="GET" action="{{ path('app_evennement_index') }}">
                                <div class="input-group">
                                    <input type="text" name="search" class="form-control" placeholder="Rechercher par nom d'événement" value="{{ app.request.query.get('search') }}">
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-secondary" type="submit">
                                            <i class="fas fa-search"></i> Rechercher
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <div class="row">
                            {% for evenement in evennements %}
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card event-card h-100">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-center mb-3">
                                                <h5 class="card-title mb-0">{{ evenement.nomEvent }}</h5>
                                                <span class="badge bg-info">{{ evenement.lieuEvent }}</span>
                                            </div>
                                            <p class="card-text text-muted">{{ evenement.descEvent|length > 100 ? evenement.descEvent|slice(0, 100) ~ '...' : evenement.descEvent }}</p>
                                            <ul class="list-unstyled">
                                                <li class="mb-1"><i class="far fa-calendar-alt me-2"></i> {{ evenement.dateEvent ? evenement.dateEvent|date('Y-m-d H:i:s') : 'N/A' }}</li>
                                                <li><i class="fas fa-users me-2"></i> Capacité: {{ evenement.capaciteEvent }}</li>
                                            </ul>
                                        </div>
                                        <div class="card-footer bg-transparent">
                                            <a href="{{ path('app_evennement_show', {'idEvent': evenement.idEvent}) }}" class="btn btn-sm btn-success">
                                                <i class="fas fa-eye"></i> Voir
                                            </a>
                                            <a href="{{ path('app_evennement_edit', {'idEvent': evenement.idEvent}) }}" class="btn btn-sm btn-warning">
                                                <i class="fas fa-pen"></i> Modifier
                                            </a>
                                            <form method="post" action="{{ path('app_evennement_delete', {'idEvent': evenement.idEvent}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement.idEvent) }}">
                                                <button class="btn btn-sm btn-danger float-end">
                                                    <i class="fas fa-trash-alt"></i> Supprimer
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <div class="col-12">
                                    <div class="alert alert-info text-center">
                                        Aucun événement trouvé
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* Styles optionnels pour améliorer l'apparence des boutons */
    .btn-warning {
        color: #212529; /* Texte noir pour meilleur contraste sur fond jaune */
    }
    .btn-warning:hover {
        transform: translateY(-1px);
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    .card-footer .btn {
        margin-right: 5px;
    }
    @media (max-width: 576px) {
        .card-footer .btn {
            width: 100%;
            margin-bottom: 5px;
        }
        .card-footer form {
            width: 100%;
        }
        .card-footer .float-end {
            float: none !important;
        }
    }
</style>
{% endblock %}