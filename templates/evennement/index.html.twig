{% extends '/dashboard/base.html.twig' %}

{% block title %}Événements{% endblock %}

{% block content %}
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-12">
                    <h3 class="page-title">Liste des Événements</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Dashboard</a></li>
                        <li class="breadcrumb-item active">Événements</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="text-end mb-4">
                            <a href="{{ path('app_evennement_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Créer un nouvel événement
                            </a>
                        </div>

                        <div class="mb-4">
                            <form method="GET" action="{{ path('app_evennement_index') }}">
                                <div class="input-group">
                                    <input type="text" name="search" class="form-control" placeholder="Rechercher par nom d'événement" value="{{ app.request.query.get('search') }}">
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-secondary" type="submit">
                                            <i class="fas fa-search"></i> Rechercher
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Description</th>
                                        <th>Date</th>
                                        <th>Lieu</th>
                                        <th>Capacité</th>
                                        <th>Type</th> {# Ajout de la colonne Type #}
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for evenement in evennements %}
                                        <tr>
                                            <td>{{ evenement.nomEvent }}</td>
                                            <td>{{ evenement.descEvent|length > 50 ? evenement.descEvent|slice(0, 50) ~ '...' : evenement.descEvent }}</td>
                                            <td>{{ evenement.dateEvent ? evenement.dateEvent|date('Y-m-d H:i:s') : '' }}</td>
                                            <td>{{ evenement.lieuEvent }}</td>
                                            <td>{{ evenement.capaciteEvent }}</td>
                                            <td>{{ evenement.typeEvent }}</td> {# Affichage du type #}
                                            <td>
                                                <a href="{{ path('app_evennement_show', {'idEvent': evenement.idEvent}) }}" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                                                <a href="{{ path('app_evennement_edit', {'idEvent': evenement.idEvent}) }}" class="btn btn-sm btn-warning"><i class="fas fa-pen"></i></a>
                                                <form method="post" action="{{ path('app_evennement_delete', {'idEvent': evenement.idEvent}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement.idEvent) }}">
                                                    <button class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></button>
                                                </form>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr><td colspan="7" class="text-center">Aucun événement trouvé</td></tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}