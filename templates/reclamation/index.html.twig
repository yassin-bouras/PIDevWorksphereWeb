{% extends '/dashboard/base2.html.twig' %}

{% block title %}Réclamations{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('back/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('back/plugins/fontawesome/css/fontawesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('back/plugins/fontawesome/css/all.min.css') }}">
    <link rel="stylesheet" href="{{ asset('back/css/style.css') }}">
    <style>
        .content {
            margin-top: -58%;
        }
        .page-header {
            margin-bottom: 1.5rem;
        }
        .page-title {
            font-size: 1.75rem;
            font-weight: 600;
            color: #2d3748;
        }
        .breadcrumb {
            background: none;
            padding: 0;
            margin-top: 0.5rem;
        }
        .breadcrumb-item a {
            color: #33ccc5;
            text-decoration: none;
        }
        .breadcrumb-item a:hover {
            text-decoration: underline;
        }
        .card {
            border: none;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            border-radius: 0.5rem;
        }
        .card-body {
            padding: 2rem;
        }
        .btn-create-reclamation {
            background-color: #33ccc5;
            border: 1px solid #33ccc5;
            color: white;
            padding: 0.5rem 1.5rem;
            border-radius: 1.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
        }
        .btn-create-reclamation:hover {
            background-color: #28a39b;
            border-color: #28a39b;
            transform: scale(1.05);
        }
        .btn-create-reclamation i {
            margin-right: 0.5rem;
        }
        .form-control {
            border: 2px solid #33ccc5;
            border-radius: 0.375rem;
            padding: 0.5rem 1rem;
            font-size: 1rem;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }
        .form-control:focus {
            border-color: #28a39b;
            box-shadow: 0 0 0 3px rgba(51, 204, 197, 0.2);
            outline: none;
        }
        .input-group {
            max-width: 600px;
            margin: 0 auto;
        }
        .btn-search {
            background-color: #33ccc5;
            border-color: #33ccc5;
            color: white;
            border-radius: 0.375rem;
            padding: 0.5rem 1rem;
            transition: all 0.3s ease;
        }
        .btn-search:hover {
            background-color: #28a39b;
            border-color: #28a39b;
        }
        .btn-reset {
            background-color: transparent;
            border: 2px solid #33ccc5;
            color: #33ccc5;
            border-radius: 0.375rem;
            padding: 0.5rem 1rem;
            transition: all 0.3s ease;
        }
        .btn-reset:hover {
            background-color: #33ccc5;
            color: white;
        }
        .table {
            border-collapse: separate;
            border-spacing: 0;
        }
        .table th {
            background-color: #f8f9fa;
            font-weight: 600;
            color: #2d3748;
            padding: 1rem;
        }
        .table td {
            padding: 1rem;
            vertical-align: middle;
        }
        .table-hover tbody tr:hover {
            background-color: #e6f3f2;
        }
        .action-btn {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
            border-radius: 0.25rem;
            transition: all 0.3s ease;
        }
        .action-btn:hover {
            transform: scale(1.1);
        }
        .pagination {
            justify-content: center;
            margin-top: 1.5rem;
        }
        .page-item.active .page-link {
            background-color: #33ccc5;
            border-color: #33ccc5;
        }
        .page-link {
            color: #33ccc5;
        }
        .page-link:hover {
            background-color: #e6f3f2;
        }
    </style>
{% endblock %}

{% block content %}
<div class="content container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-12">
                <h3 class="page-title">Liste des Réclamations</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Dashboard</a></li>
                    <li class="breadcrumb-item active">Réclamations</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form method="GET" action="{{ path('app_reclamation_index') }}" class="mb-4">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="input-group">
                                    <input type="text" name="search" class="form-control" placeholder="Rechercher par titre ou description..." value="{{ search|default('') }}">
                                    <div class="input-group-append">
                                        <button class="btn btn-search" type="submit"><i class="fas fa-search"></i> Rechercher</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <select name="type" class="form-control">
                                    <option value="">Tous les types</option>
                                    <option value="Complaint" {{ type == 'Complaint' ? 'selected' : '' }}>Plainte</option>
                                    <option value="Suggestion" {{ type == 'Suggestion' ? 'selected' : '' }}>Suggestion</option>
                                    <option value="Other" {{ type == 'Other' ? 'selected' : '' }}>Autre</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <select name="role" class="form-control">
                                    <option value="">Tous les rôles</option>
                                    <option value="Candidat" {{ role == 'Candidat' ? 'selected' : '' }}>Candidat</option>
                                    <option value="Employe" {{ role == 'Employe' ? 'selected' : '' }}>Employé</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <a href="{{ path('app_reclamation_index') }}" class="btn btn-reset w-100">Réinitialiser</a>
                            </div>
                        </div>
                    </form>

                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Titre</th>
                                    <th>Description</th>
                                    <th>Type</th>
                                    <th>Date de dépôt</th>
                                    <th>Rôle</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for reclamation in reclamations %}
                                    <tr>
                                        <td>{{ reclamation.idReclamation }}</td>
                                        <td>{{ reclamation.titre }}</td>
                                        <td>{{ reclamation.description|truncate(50, true, '...') }}</td>
                                        <td>{{ reclamation.type }}</td>
                                        <td>{{ reclamation.datedepot ? reclamation.datedepot|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>{{ reclamation.user ? reclamation.user.role : 'N/A' }}</td>
                                        <td>
                                            <div class="d-flex flex-wrap gap-2">
                                                <a href="{{ path('app_reclamation_show', {'id_reclamation': reclamation.idReclamation}) }}" class="btn btn-sm btn-outline-primary action-btn" title="Voir">
                                                    <i class="far fa-eye"></i>
                                                </a>
                                                <a href="{{ path('app_reclamation_edit', {'id_reclamation': reclamation.idReclamation}) }}" class="btn btn-sm btn-outline-warning action-btn" title="Modifier">
                                                    <i class="far fa-edit"></i>
                                                </a>
                                                <form method="post" action="{{ path('app_reclamation_delete', {'id_reclamation': reclamation.idReclamation}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réclamation ?');" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.idReclamation) }}">
                                                    <button class="btn btn-sm btn-outline-danger action-btn" title="Supprimer">
                                                        <i class="far fa-trash-alt"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7" class="text-center">Aucune réclamation trouvée</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="pagination">
                        {{ knp_pagination_render(reclamations) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}