{% extends '/dashboard/base2.html.twig' %}

{% block title %}Réclamations de l'Utilisateur{% endblock %}

{% block content %}
<style>
    /* Base styles */
    :root {
        --primary: #33ccc5;
        --primary-hover: #28a39b;
        --secondary: #4b7bec;
        --text-dark: #334155;
        --success: #2ecc71;
        --warning: #f39c12;
        --danger: #e74c3c;
        --border-radius: 8px;
        --shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    }

    /* Global animations */
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }

    @keyframes shimmer {
        0% { background-position: -100% 0; }
        100% { background-position: 100% 0; }
    }

    /* Improved search field */
    .search-container {
        position: relative;
        max-width: 600px;
        margin: 0 auto 2rem;
        animation: fadeIn 0.5s ease;
    }

    .form-control {
        border: 2px solid var(--primary);
        border-radius: var(--border-radius);
        padding: 12px 45px 12px 15px;
        font-size: 1rem;
        width: 100%;
        transition: var(--transition);
        box-shadow: var(--shadow);
    }

    .form-control:focus {
        border-color: var(--secondary);
        box-shadow: 0 0 0 3px rgba(51, 204, 197, 0.25);
    }

    .search-btn {
        position: absolute;
        right: 5px;
        top: 50%;
        transform: translateY(-50%);
        background-color: var(--primary);
        border: none;
        color: white;
        height: 40px;
        width: 40px;
        border-radius: var(--border-radius);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: var(--transition);
    }

    .search-btn:hover {
        background-color: var(--primary-hover);
        transform: translateY(-50%) scale(1.05);
    }

    /* Create button */
    .btn-create {
        display: inline-flex;
        align-items: center;
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        color: white;
        border: none;
        padding: 12px 20px;
        border-radius: 25px;
        font-weight: 600;
        box-shadow: var(--shadow);
        transition: var(--transition);
        overflow: hidden;
        position: relative;
        z-index: 1;
    }

    .btn-create:before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, var(--secondary) 0%, var(--primary) 100%);
        opacity: 0;
        z-index: -1;
        transition: var(--transition);
    }

    .btn-create:hover {
        transform: translateY(-2px);
        box-shadow: 0 7px 14px rgba(50, 50, 93, 0.1), 0 3px 6px rgba(0, 0, 0, 0.08);
    }

    .btn-create:hover:before {
        opacity: 1;
    }

    .btn-create svg {
        margin-right: 8px;
    }

    .btn-create:hover svg {
        animation: pulse 1s infinite;
    }

    /* Table styling */
    .table-container {
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        overflow: hidden;
        animation: fadeIn 0.7s ease;
    }

    .custom-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

    .custom-table thead {
        background-color: rgba(51, 204, 197, 0.1);
    }

    .custom-table th {
        padding: 15px;
        font-weight: 600;
        color: var(--text-dark);
        border-bottom: 2px solid var(--primary);
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    .custom-table td {
        padding: 15px;
        border-bottom: 1px solid #edf2f7;
        vertical-align: middle;
    }

    .custom-table tbody tr {
        transition: var(--transition);
    }

    .custom-table tbody tr:hover {
        background-color: rgba(51, 204, 197, 0.05);
        transform: translateX(3px);
    }

    /* Action buttons */
    .action-btn {
        width: 36px;
        height: 36px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        border: none;
        margin: 0 5px;
        color: white;
        transition: var(--transition);
        box-shadow: var(--shadow);
    }

    .action-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 7px 14px rgba(50, 50, 93, 0.1), 0 3px 6px rgba(0, 0, 0, 0.08);
    }

    .btn-view {
        background-color: var(--primary);
    }

    .btn-edit {
        background-color: var(--warning);
    }

    .btn-respond {
        background-color: var(--secondary);
    }

    .btn-delete {
        background-color: var(--danger);
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 5px 12px;
        border-radius: 30px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .status-pending {
        background-color: rgba(243, 156, 18, 0.15);
        color: #f39c12;
    }

    .status-answered {
        background-color: rgba(46, 204, 113, 0.15);
        color: #2ecc71;
    }

    /* Page header */
    .page-header {
        margin-bottom: 2rem;
        animation: fadeIn 0.3s ease;
    }

    .page-title {
        color: var(--text-dark);
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    /* Empty state */
    .empty-state {
        text-align: center;
        padding: 3rem 0;
        color: #718096;
    }

    .empty-state svg {
        width: 60px;
        height: 60px;
        margin-bottom: 1rem;
        color: var(--primary);
    }

    .truncate-text {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        max-height: 3em;
    }
</style>

<div class="content container-fluid" style="margin-top: -58%;">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-12">
                <h3 class="page-title">Réclamations de l'Utilisateur</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Dashboard</a></li>
                    <li class="breadcrumb-item active">Réclamations</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    {% if role == 'Candidat' %}
                        <div class="text-start mb-4">
                            <a href="{{ path('app_reclamation_new', {'id': id_user}) }}" class="btn-create">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <line x1="12" y1="8" x2="12" y2="16"></line>
                                    <line x1="8" y1="12" x2="16" y2="12"></line>
                                </svg>
                                CRÉER UNE NOUVELLE RÉCLAMATION
                            </a>
                        </div>
                    {% endif %}

                    <div class="search-container">
                        <form method="GET" action="{{ path('reclamations_by_user', {'id': id_user}) }}">
                            <input type="text" name="search" class="form-control" 
                                   placeholder="Rechercher par titre..." 
                                   value="{{ app.request.query.get('search') }}">
                            <button type="submit" class="search-btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="11" cy="11" r="8"></circle>
                                    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                                </svg>
                            </button>
                        </form>
                    </div>

                    <div class="table-container">
                        <table class="custom-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Titre</th>
                                    <th>Description</th>
                                    <th>Type</th>
                                    <th>Date</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for reclamation in reclamations %}
                                    <tr>
                                        <td>#{{ reclamation.idReclamation }}</td>
                                        <td>{{ reclamation.titre }}</td>
                                        <td>
                                            <div class="truncate-text">{{ reclamation.description }}</div>
                                        </td>
                                        <td>{{ reclamation.type }}</td>
                                        <td>{{ reclamation.datedepot ? reclamation.datedepot|date('d/m/Y') : '' }}</td>
                                        <td>
                                            {% set reponseId = reponsesMap[reclamation.idReclamation]|default(0) %}
                                            {% if reponseId == 0 %}
                                                <span class="status-badge status-pending">En attente</span>
                                            {% else %}
                                                <span class="status-badge status-answered">Répondu</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center justify-content-center">
                                                <a href="{{ path('app_reclamation_show', {'id_reclamation': reclamation.idReclamation}) }}" class="action-btn" title="Voir">
                                                  <image src="/img/visual.png" alt="View" width="20" height="30">
                                                </a>
                                                
                                                {% if role == 'Candidat' %}
                                                    <a href="{{ path('app_reclamation_edit', {'id_reclamation': reclamation.idReclamation}) }}" class="action-btn btn-edit" title="Modifier">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                                        </svg>
                                                    </a>
                                                {% endif %}
                                                
                                                {% set reponseId = reponsesMap[reclamation.idReclamation]|default(0) %}
                                                {% if reponseId == 0 %}
                                                    {% if role == 'Employe' %}
                                                        <a href="{{ path('app_reponse_new', {'id_reclamation': reclamation.idReclamation, 'id_user': id_user}) }}" class="action-btn btn-respond" title="Répondre">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                                <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
                                                            </svg>
                                                        </a>
                                                    {% endif %}
                                                {% else %}
                                                    <a href="{{ path('app_reponse_show', {'id_reponse': reponseId}) }}" class="action-btn btn-view" title="Voir Réponse">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                                                        </svg>
                                                    </a>
                                                    
                                                    {% if role == 'Employe' %}
                                                        <a href="{{ path('app_reponse_edit', {'id_reponse': reponseId}) }}" class="action-btn btn-edit" title="Modifier Réponse">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                                            </svg>
                                                        </a>
                                                        
                                                        <form method="post" action="{{ path('app_reponse_delete', {'id_reponse': reponseId}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réponse ?');">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reponseId) }}">
                                                            <button type="submit" class="action-btn btn-delete" title="Supprimer Réponse">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                                    <polyline points="3 6 5 6 21 6"></polyline>
                                                                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                                                    <line x1="10" y1="11" x2="10" y2="17"></line>
                                                                    <line x1="14" y1="11" x2="14" y2="17"></line>
                                                                </svg>
                                                            </button>
                                                        </form>
                                                    {% endif %}
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7">
                                            <div class="empty-state">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <circle cx="12" cy="12" r="10"></circle>
                                                    <path d="M8 15h8"></path>
                                                    <path d="M8 9h2"></path>
                                                    <path d="M14 9h2"></path>
                                                </svg>
                                                <p>Aucune réclamation trouvée pour cet utilisateur.</p>
                                                {% if role == 'Candidat' %}
                                                    <a href="{{ path('app_reclamation_new', {'id': id_user}) }}" class="btn-create mt-3">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                            <circle cx="12" cy="12" r="10"></circle>
                                                            <line x1="12" y1="8" x2="12" y2="16"></line>
                                                            <line x1="8" y1="12" x2="16" y2="12"></line>
                                                        </svg>
                                                        Créer votre première réclamation
                                                    </a>
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Add subtle animations when the page loads
    document.addEventListener('DOMContentLoaded', function() {
        // Stagger the animation of table rows
        const rows = document.querySelectorAll('.custom-table tbody tr');
        rows.forEach((row, index) => {
            row.style.opacity = '0';
            row.style.animation = `fadeIn 0.3s ease forwards ${0.1 + index * 0.05}s`;
        });
        
        // Add hover animations for buttons
        const buttons = document.querySelectorAll('.action-btn');
        buttons.forEach(btn => {
            btn.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-3px)';
                this.style.boxShadow = '0 7px 14px rgba(50, 50, 93, 0.1), 0 3px 6px rgba(0, 0, 0, 0.08)';
            });
            
            btn.addEventListener('mouseleave', function() {
                this.style.transform = '';
                this.style.boxShadow = '';
            });
        });
    });
</script>
{% endblock %}