{% extends '/dashboard/base.html.twig' %}

{% block title %}Détails de l'Offre{% endblock %}

{% block content %}
<div class="content container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-12">
                <h3 class="page-title">Détails de l'Offre</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_offre_index') }}">Offres</a></li>
                    <li class="breadcrumb-item active">Détails</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title text-center">{{ offre.titre }}</h4>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th>Titre</th>
                                <td>{{ offre.titre }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>
                                    <p style="white-space: pre-wrap;">{{ offre.description }}</p>
                                </td>                            </tr>
                            <tr>
                                <th>Type de Contrat</th>
                                <td>{{ offre.typeContrat }}</td>
                            </tr>
                            <tr>
                                <th>Salaire</th>
                                <td>{{ offre.salaire }} €</td>
                            </tr>
                            <tr>
                                <th>Lieu de Travail</th>
                                <td>{{ offre.lieuTravail }}</td>
                            </tr>
                            <tr>
                                <th>Date de Publication</th>
                                <td>{{ offre.datePublication ? offre.datePublication|date('Y-m-d') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Date Limite</th>
                                <td>{{ offre.dateLimite ? offre.dateLimite|date('Y-m-d') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Statut</th>
                                <td>{{ offre.statutOffre }}</td>
                            </tr>
                            <tr>
                                <th>Expérience Requise</th>
                                <td>{{ offre.experience }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-center">
                    <a href="{{ path('app_offre_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                    <a href="{{ path('app_offre_edit', {'id_offre': offre.idOffre}) }}" class="btn btn-warning">
                        <i class="far fa-edit"></i> Modifier
                    </a>
                    <form method="post" action="{{ path('app_offre_delete', {'id_offre': offre.idOffre}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette offre ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offre.idOffre) }}">
                        <button class="btn btn-danger">
                            <i class="far fa-trash-alt"></i> Supprimer
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-danger:hover {
        background-color: #980808; /* Dark red color */
        border-color: #a80000; /* Match the border color */
        color: white; /* Ensure the text remains visible */
    }
</style>
{% endblock %}