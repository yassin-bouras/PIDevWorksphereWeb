{% extends '/dashboard/base2.html.twig' %}

{% block title %}Candidatures pour {{ offre.titre }}{% endblock %}

{% block content %}
<div class="container" style="margin-top: -53%;">
    <div class="mb-10">
        <a href="{{ path('app_offre_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
    </div>
    <h1 class="text-center mb-5" style="font-weight: 600; color: #333;">Candidatures pour l'offre : {{ offre.titre }}</h1>

    <div class="candidature-grid row" style="max-width: 1060px; margin: 0 auto;">
        {% for candidature in candidatures %}
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                     <h5 class="card-title">Candidature <!--#{{ candidature.id }}--></h5> 
                    <p class="card-text">
                        <strong>CV:</strong>
                        {% if candidature.cv %}
                        <a href="{{ asset('uploads/' ~ candidature.cv) }}" target="_blank">Télécharger</a>
                        {% else %}
                        Non fourni
                        {% endif %}
                    </p>
                    <p class="card-text">
                        <strong>Lettre de Motivation:</strong>
                        {% if candidature.lettreMotivation %}
                        <a href="{{ asset('uploads/' ~ candidature.lettreMotivation) }}" target="_blank">Télécharger</a>
                        {% else %}
                        Non fournie
                        {% endif %}
                    </p>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12">
            <div class="alert alert-warning text-center">
                Aucune candidature trouvée pour cette offre.
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}