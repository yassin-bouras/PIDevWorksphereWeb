{% extends '/dashboard/base2.html.twig' %}

{% block content %}

<style>
     /* Style général */
     .styled-form-wrapper .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }
    
    .styled-form-wrapper label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: #495057;
    }
    
    /* Style des inputs */
    .styled-form-wrapper input:not([type="file"]),
    .styled-form-wrapper textarea {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid #ced4da;
        border-radius: 0.375rem;
        font-size: 1rem;
        transition: all 0.3s;
        background-color: #fff;
    }
    
    /* Style amélioré pour les selects */
    .styled-form-wrapper select {
        width: 100%;
        padding: 0.75rem 2.5rem 0.75rem 1rem;
        border: 1px solid #ced4da;
        border-radius: 0.375rem;
        font-size: 1rem;
        appearance: none;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23343a40' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 1rem center;
        background-size: 16px 12px;
        background-color: #fff;
        transition: all 0.3s;
    }
    
    .styled-form-wrapper select:focus {
        border-color: #86b7fe;
        outline: 0;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
    
    /* Style pour l'upload d'image */
    .image-upload-box {
        position: relative;
        cursor: pointer;
    }
    
    .image-preview {
        width: 200px;
        height: 200px;
        border: 2px dashed #dee2e6;
        border-radius: 0.375rem;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        background-color: #f8f9fa;
        transition: all 0.3s;
    }
    
    .image-preview:hover {
        border-color: #adb5bd;
    }
    
    .preview-image {
        max-width: 100%;
        max-height: 100%;
        display: none;
    }
    
    .upload-icon {
        text-align: center;
        color: #6c757d;
    }
    
    .upload-icon i {
        font-size: 2rem;
        margin-bottom: 0.5rem;
        display: block;
    }
    
  /* Boutons */
  .btn-primary {
        background-color: #4a90e2;
        border: none;
        padding: 0.75rem 1.5rem;
    }
    
    .btn-secondary {
        background-color: #6c757d;
        border: none;
        padding: 0.75rem 1.5rem;
        margin-left: 0.5rem;
    }
    
    .btn-danger {
        background-color: #dc3545;
        border: none;
        padding: 0.5rem 1rem;
    }
    
    /* Validation */
    .is-invalid {
        border-color: #dc3545 !important;
    }
    
    .invalid-feedback {
        display: none;
        color: #dc3545;
        font-size: 0.875em;
    }
    
    .was-validated .form-control:invalid ~ .invalid-feedback,
    .form-control.is-invalid ~ .invalid-feedback {
        display: block;
    }
    /* Effets de focus */
    .styled-form-wrapper input:focus,
    .styled-form-wrapper select:focus,
    .styled-form-wrapper textarea:focus {
        border-color: #86b7fe;
        outline: 0;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .is-invalid {
        border-color: #dc3545 !important;
    }

    .invalid-feedback {
        display: none;
        color: #dc3545;
        font-size: 0.875em;
    }

    .was-validated .form-control:invalid ~ .invalid-feedback,
    .form-control.is-invalid ~ .invalid-feedback {
        display: block;
    }

    .styled-form-wrapper input:focus,
    .styled-form-wrapper select:focus,
    .styled-form-wrapper textarea:focus {
        border-color: #86b7fe;
        outline: 0;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
    
    .btn-delete {
        background-color: #dc3545; /* Red */
        border: none;
        padding: 0.75rem 1.5rem;
        color: #fff;
        font-size: 1rem;
        border-radius: 0.375rem;
        transition: all 0.3s ease;
    }

    .btn-delete:hover {
        background-color: #a71d2a; /* Darker red */
        color: #fff;
    }

    .btn-delete:focus {
        outline: none;
        box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.5);
    }
</style>

<div class="content container-fluid" style="margin-top: -58%;">
    <div class="row">
        <div class="col-xl-12 col-sm-12 col-12">
            <div class="breadcrumb-path mb-4">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_dashboard_manager') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_offre_index') }}">Offres</a></li>
                    <li class="breadcrumb-item active">Modifier Offre</li>
                </ul>
                <h3>Modifier une offre</h3>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2 class="card-titles">Édition de l'offre</h2>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

            <div class="styled-form-wrapper">
                <div class="form-group">
                    {{ form_label(form.titre) }}
                    {{ form_widget(form.titre, {
                        'attr': {
                            'class': 'form-control' ~ (form.titre.vars.errors|length ? ' is-invalid' : '')
                        }
                    }) }}
                    {% if form.titre.vars.errors %}
                        <div class="invalid-feedback">
                            {% for error in form.titre.vars.errors %}
                                {{ error.message }}
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            
                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {
                        'attr': {
                            'class': 'form-control' ~ (form.description.vars.errors|length ? ' is-invalid' : '')
                        }
                    }) }}
                    {% if form.description.vars.errors %}
                        <div class="invalid-feedback">
                            {% for error in form.description.vars.errors %}
                                {{ error.message }}
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            
                <div class="form-group">
                    {{ form_label(form.type_contrat) }}
                    {{ form_widget(form.type_contrat, {
                        'attr': {
                            'class': 'form-control' ~ (form.type_contrat.vars.errors|length ? ' is-invalid' : '')
                        }
                    }) }}
                    {% if form.type_contrat.vars.errors %}
                        <div class="invalid-feedback">
                            {% for error in form.type_contrat.vars.errors %}
                                {{ error.message }}
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            
                <div class="form-group">
                    {{ form_label(form.salaire) }}
                    {{ form_widget(form.salaire, {
                        'attr': {
                            'class': 'form-control' ~ (form.salaire.vars.errors|length ? ' is-invalid' : '')
                        }
                    }) }}
                    {% if form.salaire.vars.errors %}
                        <div class="invalid-feedback">
                            {% for error in form.salaire.vars.errors %}
                                {{ error.message }}
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            
                <div class="form-group">
                    {{ form_label(form.lieu_travail) }}
                    {{ form_widget(form.lieu_travail, {
                        'attr': {
                            'class': 'form-control' ~ (form.lieu_travail.vars.errors|length ? ' is-invalid' : '')
                        }
                    }) }}
                    {% if form.lieu_travail.vars.errors %}
                        <div class="invalid-feedback">
                            {% for error in form.lieu_travail.vars.errors %}
                                {{ error.message }}
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            
                <div class="form-group">
                    {{ form_label(form.date_limite) }}
                    {{ form_widget(form.date_limite, {
                        'attr': {
                            'class': 'form-control'}
                    }) }}
                    {% if form.date_limite.vars.errors %}
                        <div class="invalid-feedback">
                            {% for error in form.date_limite.vars.errors %}
                                {{ error.message }}
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            
                <div class="form-group">
                    {{ form_label(form.statut_offre) }}
                    {{ form_widget(form.statut_offre, {
                        'attr': {
                            'class': 'form-control' ~ (form.statut_offre.vars.errors|length ? ' is-invalid' : '')
                        }
                    }) }}
                    {% if form.statut_offre.vars.errors %}
                        <div class="invalid-feedback">
                            {% for error in form.statut_offre.vars.errors %}
                                {{ error.message }}
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            
                <div class="form-group">
                    {{ form_label(form.experience) }}
                    {{ form_widget(form.experience, {
                        'attr': {
                            'class': 'form-control' ~ (form.experience.vars.errors|length ? ' is-invalid' : '')
                        }
                    }) }}
                    {% if form.experience.vars.errors %}
                        <div class="invalid-feedback">
                            {% for error in form.experience.vars.errors %}
                                {{ error.message }}
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="form-actions mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Mettre à jour
                </button>
                <a href="{{ path('app_offre_index') }}" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Annuler
                </a>
            </div>

            {{ form_end(form) }}

            <div class="mt-4">
                {{ include('offre/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const form = document.querySelector('.needs-validation');

        form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }

            form.classList.add('was-validated');
        }, false);
    });
</script>

{% endblock %}

