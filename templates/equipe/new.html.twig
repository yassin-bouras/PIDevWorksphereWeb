{% extends '/dashboard/manager.html.twig' %}

{% block content %}


<style>
    /* Style général */
    .styled-form-wrapper .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }
    
    .styled-form-wrapper label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: #495057;
    }
    
    /* Style des inputs */
    .styled-form-wrapper input:not([type="file"]),
    .styled-form-wrapper textarea {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid #ced4da;
        border-radius: 0.375rem;
        font-size: 1rem;
        transition: all 0.3s;
        background-color: #fff;
    }
    
    /* Style amélioré pour les selects */
    .styled-form-wrapper select {
        width: 100%;
        padding: 0.75rem 2.5rem 0.75rem 1rem;
        border: 1px solid #ced4da;
        border-radius: 0.375rem;
        font-size: 1rem;
        appearance: none;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23343a40' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 1rem center;
        background-size: 16px 12px;
        background-color: #fff;
        transition: all 0.3s;
    }
    
    .styled-form-wrapper select:focus {
        border-color: #86b7fe;
        outline: 0;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
    
    /* Style pour l'upload d'image */
    .image-upload-box {
        position: relative;
        cursor: pointer;
    }
    
    .image-preview {
        width: 200px;
        height: 200px;
        border: 2px dashed #dee2e6;
        border-radius: 0.375rem;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        background-color: #f8f9fa;
        transition: all 0.3s;
    }
    
    .image-preview:hover {
        border-color: #adb5bd;
    }
    
    .preview-image {
        max-width: 100%;
        max-height: 100%;
        display: none;
    }
    
    .upload-icon {
        text-align: center;
        color: #6c757d;
    }
    
    .upload-icon i {
        font-size: 2rem;
        margin-bottom: 0.5rem;
        display: block;
    }
    
  /* Boutons */
  .btn-primary {
        background-color: #4a90e2;
        border: none;
        padding: 0.75rem 1.5rem;
    }
    
    .btn-secondary {
        background-color: #6c757d;
        border: none;
        padding: 0.75rem 1.5rem;
        margin-left: 0.5rem;
    }
    
    .btn-danger {
        background-color: #dc3545;
        border: none;
        padding: 0.5rem 1rem;
    }
    
    /* Validation */
    .is-invalid {
        border-color: #dc3545 !important;
    }
    
    .invalid-feedback {
        display: none;
        color: #dc3545;
        font-size: 0.875em;
    }
    
    .was-validated .form-control:invalid ~ .invalid-feedback,
    .form-control.is-invalid ~ .invalid-feedback {
        display: block;
    }
    /* Effets de focus */
    .styled-form-wrapper input:focus,
    .styled-form-wrapper select:focus,
    .styled-form-wrapper textarea:focus {
        border-color: #86b7fe;
        outline: 0;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    
</style>

            <div class="content container-fluid">
                <div class="row">
                    <div class="col-xl-12 col-sm-12 col-12">
                        <div class="breadcrumb-path mb-4">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="{{ path('app_dashboard_manager') }}">Accueil</a></li>
                                <li class="breadcrumb-item"><a href="{{ path('app_equipe_index') }}">Equipe</a></li>
                                <li class="breadcrumb-item active">Nouvelle équipe</li>
                            </ul>
                            <h3>Créer une équipe</h3>
                        </div>
                    </div>
                </div>
            
           
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-titles">Equipe Details</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        
                        {# Prévisualisation d'image #}
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="image-upload-box" id="imageUploadBox">
                                    <div class="image-preview" id="imagePreview">
                                        <img src="" alt="Image Preview" class="preview-image">
                                        <div class="upload-icon">
                                            <i class="fas fa-camera"></i>
                                            <span>Select Image</span>
                                        </div>
                                    </div>
                                    {{ form_widget(form.imageEquipe, {'attr': {'class': 'd-none'}}) }}
                                </div>
                            </div>
                        </div>
                        
                        {# Conteneur du formulaire #}
                        <div class="styled-form-wrapper">
                            {{ form_widget(form) }}
                        </div>
                        
