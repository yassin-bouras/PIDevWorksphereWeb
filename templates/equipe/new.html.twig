                                <i class="fas fa-save"></i> Enregistrer
                            </button>
                            <a href="{{ path('app_equipe_index') }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                        </div>

                        {{ form_end(form) }}

                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>



<script>
document.addEventListener('DOMContentLoaded', function() {
    // Gestion de la prévisualisation d'image
    const imageUploadBox = document.getElementById('imageUploadBox');
    const imageInput = document.querySelector('input[type="file"]');
    const imagePreview = document.querySelector('.preview-image');
    const uploadIcon = document.querySelector('.upload-icon');
    
    if (imageUploadBox && imageInput) {
        imageUploadBox.addEventListener('click', function() {
            imageInput.click();
        });
        
        imageInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    imagePreview.src = event.target.result;
                    imagePreview.style.display = 'block';
                    uploadIcon.style.display = 'none';
                };
                reader.readAsDataURL(file);
            } else {
                imagePreview.style.display = 'none';
                uploadIcon.style.display = 'block';
            }
        });
    }
    
    // Amélioration des selects
    const selects = document.querySelectorAll('.styled-form-wrapper select');
    selects.forEach(select => {
        // Création d'un wrapper personnalisé
        const wrapper = document.createElement('div');
        wrapper.className = 'custom-select-wrapper';
        select.parentNode.insertBefore(wrapper, select);
        wrapper.appendChild(select);
    });
});
</script>
