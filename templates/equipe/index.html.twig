{% extends '/dashboard/manager.html.twig' %}

{% block content %}
<style>
    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }
    .pagination ul {
        display: flex;
        list-style: none;
        padding: 0;
        margin: 0;
    }
    .pagination li {
        margin: 0 3px;
    }
    .pagination a, 
    .pagination span {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    .pagination a {
        color: #6c757d;
        border: 1px solid #dee2e6;
        background-color: white;
    }
    .pagination a:hover {
        background-color: #f8f9fa;
        color: #4e73df;
        border-color: #4e73df;
    }
    .pagination .active span {
        background-color: #4e73df;
        color: white;
        border: 1px solid #4e73df;
        box-shadow: 0 2px 5px rgba(78, 115, 223, 0.3);
    }
    .pagination .disabled span {
        color: #adb5bd;
        background-color: #f8f9fa;
        border-color: #dee2e6;
        cursor: not-allowed;
    }
    .pagination .page-item:first-child a,
    .pagination .page-item:last-child a {
        border-radius: 50%;
    }
</style>
            
<div class="content container-fluid" style="margin-top: -50.5%;">
                <div class="page-header">
                    <div class="row">
                        <div class="col-sm-12">
                            <h3 class="page-title">Liste des Equipes</h3>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="{{ path('app_dashboard_manager') }}">Accueil</a></li>
                                <li class="breadcrumb-item active">Équipes</li>
                            </ul>
                        </div>
                    </div>
                </div>
        
            
            <div class="col-xl-12 col-sm-12 col-12 mb-4">
                <div class="head-link-set">
                    <a class="btn-add" href="{{ path('app_equipe_new') }}">
                        <i class="fas fa-plus"></i> Créer une équipe
                    </a>
                   
                </div>


                
            </div>
            
            <div class="col-xl-12 col-sm-12 col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-titles">Détails des équipes</h2>
                    </div>
                    
                    <div class="card-body">
                        <div class="mb-4">
                            <form method="GET" action="{{ path('app_equipe_index') }}" class="search-form">
                                <div class="input-group">
                                <div class="top-nav-search">
                                    <form><input type="text"  name="search" class="form-control" 
                                        placeholder="Rechercher par nom d'équipe" 
                                        value="{{ app.request.query.get('search') }}"><button class="btn" type="submit"><i class="fas fa-search"></i></button></form>
                                  </div>
                                </div>
                            </form>
                        </div>
                        
                        <div class="table-responsive">
                            <table class="table custom-table no-footer">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Nom</th>
                                     <!--    <th>Nbr projets</th> -->
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for equipe in equipes %}
                                    <tr>

                                        <td>
                                            {% if equipe.imageEquipe %}
                                            <div class="table-img">
                                                <img src="{{ asset(equipe.imageEquipe) }}" alt="Image équipe" 
                                                     class="img-table" width="40" height="40">
                                            </div>
                                            {% endif %}
                                        </td>
                                        
                                        <td>
                                            <label>{{ equipe.nomEquipe }}</label>
                                        </td>
                                        
                                        <!-- <td>
                                            <label>{{ equipe.nbrProjet }}</label>
                                        </td> -->
                                        <td>
                                            <div class="actionset">
                                                <label>
                                                   <a class="action_label5" href="{{ path('app_equipe_show', {'id': equipe.id}) }}" style="background-color: #2f92e4; color: white; padding: 8px 15px; border-radius: 5px; text-decoration: none; font-size: 0.9rem; border: none;">
                                                        <i data-feather="eye"></i> Voir
                                                    </a>
                                                </label>
                                                <label>
                                                    <a style="background-color: #e7cd3c; color: white; padding: 8px 15px; border-radius: 5px; text-decoration: none; font-size: 0.9rem; border: none;" class="action_label5" href="{{ path('app_equipe_edit', {'id': equipe.id}) }}">
                                                        <i data-feather="edit"></i> Modifier
                                                    </a>
                                                </label>
                                                <label>
                                                    <a href="#" style="background-color: #e74c3c; color: white; padding: 8px 15px; border-radius: 5px; text-decoration: none; font-size: 0.9rem; border: none;" class="action_label5" data-toggle="modal" data-target="#deleteModal{{ equipe.id }}">
                                                        <i class="fas fa-trash"></i> Supprimer
                                                    </a>
                                                </label>

                                                <label>
                                                    <a href="#" style="background-color: #2ecc71; color: white; padding: 8px 15px; border-radius: 5px; text-decoration: none; font-size: 0.9rem; border: none;" 
                                                       class="action_label5 assign-btn" 
                                                       data-toggle="modal" 
                                                       data-target="#assignModal{{ equipe.id }}"
                                                       data-equipe-id="{{ equipe.id }}">
                                                        <i class="fas fa-link"></i> Assigner
                                                    </a>
                                                </label>

                                            </div>
                                        </td>
                                    </tr>

                               <!-- Modal d'assignation -->
<div class="modal fade" id="assignModal{{ equipe.id }}" tabindex="-1" role="dialog" aria-labelledby="assignModalLabel{{ equipe.id }}" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="assignModalLabel{{ equipe.id }}">Assigner un projet à {{ equipe.nomEquipe }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="{{ path('app_equipe_assign_project', {'id': equipe.id}) }}" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="projetSelect{{ equipe.id }}">Sélectionnez un projet</label>
                        <select class="form-control" id="projetSelect{{ equipe.id }}" name="projet_id" required>
                            <option value="">-- Choisir un projet --</option>
                            {% for projet in all_projets %}
                              
                                    <option value="{{ projet.id }}">{{ projet.nom }}</option>
                           
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">Assigner</button>
                </div>
            </form>
        </div>
    </div>
</div>
                                     <!-- Modal de suppression pour chaque équipe -->
                            <div class="modal fade" id="deleteModal{{ equipe.id }}" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel{{ equipe.id }}" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header text-center border-0">
                                            <h5 class="modal-title" id="deleteModalLabel{{ equipe.id }}">Êtes-vous sûr de vouloir supprimer?</h5>
                                        </div>
                                        <div class="modal-body text-center">
                                            <p>Vous êtes sur le point de supprimer l'équipe "{{ equipe.nomEquipe }}". Cette action est irréversible.</p>
                                        </div>
                                        <div class="modal-footer text-center border-0">
                                            <form action="{{ path('app_equipe_delete', {'id': equipe.id}) }}" method="post" style="display: inline;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipe.id) }}">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <button type="submit" class="btn btn-danger">Supprimer</button>
                                            </form>
                                            <button style="background-color: #2f8f37;" type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                                    {% else %}
                                    <tr>
                                        <td colspan="4" class="text-center">
                                            <label>Aucune équipe trouvée</label>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>

                            <div class="card-footer">
                                <div class="pagination">
                                    {{ knp_pagination_render(equipes, null, {}, {
                                        'align': 'center',
                                        'size': 'small',
                                        'style': 'rounded',
                                    }) }}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>

$(document).ready(function() {
 
    $('.select2-multiple').select2({
        placeholder: "Rechercher et sélectionner des projets",
        allowClear: true,
        width: '100%',
        dropdownParent: $('.modal')
    });

   
    $('.modal').on('shown.bs.modal', function() {
        $(this).find('.select2-multiple').select2({
            dropdownParent: $(this)
        });
    });

   
    $('[data-toggle="confirmation"]').confirmation({
        btnOkLabel: 'Oui',
        btnCancelLabel: 'Non'
    });
});
</script>


{% endblock %}