{% extends '/home/index.html.twig' %}

{% block title %}Équipes & Projets{% endblock %}

{% block body %}
<div class="container py-5" style="margin-top: 7%;">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold" style="color: #2c3e50;">Équipes & Projets</h1>
        <p class="lead text-muted">Découvrez nos équipes et leurs projets</p>
    </div>

    <div class="card shadow-sm border-0 overflow-hidden">
        <!-- En-tête avec barre de recherche -->
        <div class="card-header py-3" style="background-color: #4771cb;">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h2 class="h5 mb-0 text-white"><i class="fas fa-users me-2"></i>Liste des équipes</h2>
                </div>
                <div class="col-md-6">
                    <form action="{{ path('AfficherEquipeFront') }}" method="get">
                        <div class="input-group">
                            <input 
                                type="text" 
                                class="form-control border-0 shadow-none" 
                                placeholder="Rechercher une équipe ou projet..."
                                name="search"
                                value="{{ searchTerm|default('') }}"
                                style="height: 45px;"
                            >
                            <button type="submit" class="btn btn-dark" style="background-color: #2c3e50;">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Tableau principal -->
        <div class="card-body p-0">
            {% if equipes is not empty %}
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4 py-3 text-uppercase text-muted fw-normal fs-7">Équipe</th>
                                <th class="py-3 text-uppercase text-muted fw-normal fs-7">Membres</th>
                                <th class="py-3 text-uppercase text-muted fw-normal fs-7">Projets</th>
                                <th class="pe-4 py-3 text-end text-uppercase text-muted fw-normal fs-7">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for equipe in equipes %}
                            <tr class="border-top border-light">
                                <!-- Colonne Équipe -->
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="me-3">
                                            {% if equipe.imageEquipe %}
                                                <img src="{{ asset(equipe.imageEquipe) }}" class="rounded-circle shadow-sm" style="width: 45px; height: 45px; object-fit: cover;" alt="Logo équipe">
                                            {% else %}
                                                <div class="rounded-circle bg-light-blue text-white d-flex align-items-center justify-content-center shadow-sm" style="width: 45px; height: 45px; background-color: #4771cb;">
                                                    <i class="fas fa-users"></i>
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div>
                                            <h6 class="mb-0 fw-bold" style="color: #2c3e50;">{{ equipe.nomEquipe }}</h6>
                                           
                                        </div>
                                    </div>
                                </td>

                                <!-- Colonne Membres -->
                                <td>
                                    <div class="d-flex flex-wrap align-items-center gap-2">
                                        {% for user in equipe.users %}
                                            <div class="position-relative">
                                                {% if user.imageprofil %}
                                                    <img class="rounded-circle shadow-sm" alt="Membre" src="{{ asset(user.imageprofil) }}" style="width: 38px; height: 38px; object-fit: cover;">
                                                {% else %}
                                                    <div class="rounded-circle bg-light text-muted d-flex align-items-center justify-content-center shadow-sm" style="width: 38px; height: 38px;">
                                                        <i class="fas fa-user"></i>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        {% endfor %}
                                    </div>
                                </td>

                                <!-- Colonne Projets -->
                                <td>
                                    {% if equipe.projets is not empty %}
                                        <div class="d-flex align-items-center">
                                            <div class="me-3">
                                                {% for projet in equipe.projets|slice(0, 1) %}
                                                    {% if projet.imageProjet %}
                                                        <img src="{{ asset(projet.imageProjet) }}" class="rounded-circle shadow-sm" style="width: 45px; height: 45px; object-fit: cover;">
                                                    {% else %}
                                                        <div class="rounded-circle bg-light-orange text-white d-flex align-items-center justify-content-center shadow-sm" style="width: 45px; height: 45px; background-color: #f5a623;">
                                                            <i class="fas fa-project-diagram"></i>
                                                        </div>
                                                    {% endif %}
                                                {% endfor %}
                                            </div>
                                            <div>
                                                {% for projet in equipe.projets|slice(0, 1) %}
                                                    <h6 class="mb-0 fw-bold" style="color: #2c3e50;">{{ projet.nom }}</h6>
                                                {% endfor %}
                                                {% if equipe.projets|length > 1 %}
                                                    <small class="text-muted">+ {{ equipe.projets|length - 1 }} autres projets</small>
                                                {% endif %}
                                            </div>
                                        </div>
                                    {% else %}
                                        <span class="badge bg-light text-muted rounded-pill py-2 px-3">
                                            <i class="fas fa-exclamation-circle me-1"></i> Aucun projet
                                        </span>
                                    {% endif %}
                                </td>
                                
                                <!-- Bouton Voir -->
                                <td class="text-end pe-4">
                                    <a href="{{ path('AfficherDetailsEq', {'id': equipe.id}) }}" class="btn btn-sm btn-primary rounded-pill px-3 shadow-sm" style="background-color: #2c3e50; border: none;">
                                        Voir <i class="fas fa-chevron-right ms-1"></i>
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-5">
                    <div class="empty-state">
                        <div class="empty-state-icon bg-light rounded-circle mb-3 d-inline-flex align-items-center justify-content-center p-4" style="background-color: rgba(71, 113, 203, 0.1);">
                            <i class="fas fa-users fa-2x" style="color: #4771cb;"></i>
                        </div>
                        <h4 class="fw-bold mb-3" style="color: #2c3e50;">Aucune équipe trouvée</h4>
                       
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8fafc;
    }
    
    .card {
        border-radius: 12px;
    }
    
    .card-header {
        border-bottom: none;
    }
    
    .bg-light-blue {
        background-color: rgba(71, 113, 203, 0.1);
    }
    
    .bg-light-orange {
        background-color: rgba(245, 166, 35, 0.1);
    }
    
    table {
        border-collapse: separate;
        border-spacing: 0;
    }
    
    thead th {
        position: sticky;
        top: 0;
        z-index: 10;
    }
    
    tbody tr {
        transition: all 0.2s ease;
    }
    
    tbody tr:hover {
        background-color: #f8f9fa !important;
        transform: translateY(-1px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }
    
    .rounded-circle {
        transition: transform 0.2s ease;
    }
    
    .rounded-circle:hover {
        transform: scale(1.1);
    }
    
    .empty-state {
        max-width: 400px;
        margin: 0 auto;
    }
    
    .badge {
        font-weight: 500;
        padding: 0.35em 0.65em;
    }
    
    .form-control:focus {
        border-color: #4771cb;
        box-shadow: 0 0 0 0.25rem rgba(71, 113, 203, 0.25);
    }
</style>
{% endblock %}