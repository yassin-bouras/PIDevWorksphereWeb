{% extends '/home/index.html.twig' %}

{% block title %}Équipes & Projets{% endblock %}

{% block body %}
<div class="container-fluid py-6" style="margin-top: 5rem;">
    <div class="row">
        <div class="col-xl-12 col-sm-12 col-12">
            <div class="card mt-5"> 
                <!-- En-tête avec titre et images des équipes -->
                <div class="card-header create-formhead">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="card-titles">Liste des Équipes</h2>
                           
                        </div>
                      
                        <div class="search-bar position-relative" style="width: 300px;">
                            <form action="{{ path('AfficherEquipeFront') }}" method="get">
                                <input 
                                    type="text" 
                                    class="form-control rounded-pill ps-4" 
                                    placeholder="Rechercher équipe ou projet..."
                                    name="search"
                                    value="{{ searchTerm|default('') }}"
                                >
                                <button type="submit" class="btn btn-link position-absolute" style="left: 0px; top: 50%; transform: translateY(-50%); border: none; background: none;">
                                    <i class="fas fa-search"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Tableau principal -->
                <div class="card-body">
                    {% if equipes is not empty %}
                        <div class="table-responsive">
                            <table class="table team-table">
                                <thead>
                                    <tr>
                                        <th>Équipe</th>
                                        <th>Membres</th>
                                        <th>Projets</th>
                                        <th></th> <!-- Colonne vide pour le bouton Voir -->
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for equipe in equipes %}
                                
                                    <tr>
                                        <!-- Colonne Équipe -->
                                        <td>
                                            <div class="d-flex align-items-center">
                                                {% if equipe.imageEquipe %}
                                                    <img src="{{ asset(equipe.imageEquipe) }}" class="avatar-img rounded-circle bg-light d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;" alt="Logo équipe">
                                                {% else %}
                                                    <div  class="avatar-img rounded-circle bg-light d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                                                        <i class="fas fa-users text-muted"></i>
                                                    </div>
                                                {% endif %}
                                                <div>
                                                    <h6 class="mb-0 font-weight-bold">{{ equipe.nomEquipe }}</h6>
                                               
                                                </div>
                                            </div>
                                        </td>

                                        <!-- Colonne Membres -->
                                        <td>
                                            <div class="avatar-group">
                                                {% for user in equipe.users|slice(0, 3) %}
                                                    <div class="avatar avatar-xs">
                                                        {% if user.imageprofil  %}
                                                            <img class="avatar-img rounded-circle" alt="Membre" src="{{ asset(user.imageprofil ) }}" width="35" height="35">
                                                        {% else %}
                                                            <div class="avatar-img rounded-circle bg-light d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                                                                <i class="fas fa-user text-muted"></i>
                                                            </div>
                                                        {% endif %}
                                                    </div>
                                                {% endfor %}
                                                <div>
                                                {% if equipe.users|length > 3 %}
                                                
                                                   <!--  <button class="btn btn-sm btn-link text-primary">
                                                        +{{ equipe.users|length - 3 }} autres
                                                    </button> -->
                    
                                                            <small class="text-muted">+ {{ equipe.users|length - 3 }} autres</small>
                                                  
                                                    
                                                {% endif %}
                                            </div>
                                            </div>
                                        </td>

                                        <!-- Colonne Projets -->
                                        <td>
                                            {% if equipe.projets is not empty %}
                                                <div class="d-flex align-items-center">
                                                    {% for projet in equipe.projets|slice(0, 1) %}
                                                        {% if projet.imageProjet %}
                                                            <img src="{{ asset(projet.imageProjet) }}" class="avatar-img rounded-circle bg-light d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                                                        {% else %}
                                                            <div class="avatar-img rounded-circle bg-light d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                                                                <i class="fas fa-project-diagram text-muted"></i>
                                                            </div>
                                                        {% endif %}
                                                        <div>
                                                            <h6 class="mb-0">{{ projet.nom }}</h6>
                                                            {% if equipe.projets|length > 1 %}
                                                                <small class="text-muted">+ {{ equipe.projets|length - 1 }} autres </small>
                                                            {% endif %}
                                                        </div>
                                                    {% endfor %}
                                                </div>
                                            {% else %}
                                                <span class="text-muted">Aucun projet</span>
                                            {% endif %}
                                        </td>
                   <!-- Bouton Voir -->
             <td class="text-end">
                 <a href="{{ path('AfficherDetailsEq', {'id': equipe.id}) }}" class="btn btn-sm btn-primary rounded-pill px-3">
                         Voir <i class="fas fa-chevron-right ms-1"></i>
                             </a>
              </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-4x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucune équipe ou projet trouvée</h5>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .create-formhead {
        background-color: #f8f9fa;
        border-bottom: 1px solid #eee;
        padding: 5px 5px;
    }
    
    .card-titles {
        font-weight: 200;
        color: #333;
        margin-bottom: 0;
     
    }
    
    .search-bar input {
        border: 1px solid #dee2e6;
        transition: all 0.3s;
    }
    
    .search-bar input:focus {
        border-color: #86b7fe;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
    
    .team-table {
        margin-top: 20px;
      
    }
    
    .team-table th {
        font-weight: 400;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
        color: #6c757d;
        border-top: none;
        padding: 10px 8px;
        background-color: #f8f9fa;
    }
    
    .team-table td {
        vertical-align: middle;
        padding: 20px 10px;
        border-top: 1px solid #f1f1f1;
    }
    
    .team-table tr:hover td {
        background-color: #f8faff;
    }
    
    .avatar-group {
        display: flex;
        align-items: center;
    }
    
    .avatar {
        margin-left: -12px;
        border: 2px solid #fff;
    }
    
    .avatar:first-child {
        margin-left: 0;
    }
    
    .avatar-sm {
        width: 40px;
        height: 40px;
    }
    
    .avatar-xs {
        width: 35px;
        height: 35px;
    }
    
    .avatar-img {
        object-fit: cover;
    }
    
    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }
</style>
{% endblock %}