{% extends '/home/index.html.twig' %}

{% block title %} NOUVELLE {% endblock %}

{% block stylesheets %}
<style>
    .card {
        width: 800px;
        height: auto;
        position: relative;

        background: #33ccc5;
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        border-radius: 21px;
        padding: 3rem 2rem;
        /* Ajustement du padding pour un meilleur centrage */

        /* padding: 4rem 6rem 10rem 6rem; */
        /* padding: 3rem 10rem 2rem 4rem; */
        /* Reduced padding */
        text-align: center;
        margin: 10% auto;
    }

    .card h2 {
        z-index: 1;
        color: #ffffff;
        font-size: 2.2em;
        font-weight: bold;
        /* Texte en gras */
        margin-bottom: 3rem;
        text-align: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin-top: -10px;

    }

    .card::before {
        content: '';
        position: absolute;
        width: 150%;
        height: 150%;
        background-image: linear-gradient(180deg, rgb(0, 183, 255), rgb(255, 48, 255));
        animation: rotBGimg 3s linear infinite;
        transition: all 0.2s linear;
    }

    @keyframes rotBGimg {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    .card::after {
        content: '';
        position: absolute;
        /* background: #33ccc5; */
        background-image: linear-gradient(-45deg, #98d8ff 0%, #c68fc6 100%);

        inset: 5px;
        border-radius: 15px;
        z-index: 0;
    }

    .card-content {
        position: relative;
        z-index: 1;
        width: 100%;
    }

    .form {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 20px;
        width: 100%;
    }

    .form .input {
        width: 80%;
        background: #fff;
        border: none;
        padding: 15px 20px;
        border-radius: 20px;
        margin-top: 15px;
        box-shadow: #cff0ff 0px 10px 10px -5px;
        border-inline: 2px solid transparent;
    }

    .form .input::placeholder {
        color: #aaaaaa;
    }

    .form .input:focus {
        outline: none;
        border-inline: 2px solid #12b1d1;
    }

    .form .forgot-password {
        display: block;
        margin-top: 10px;
        margin-left: 10px;
    }

    .form .forgot-password a {
        font-size: 11px;
        color: #0099ff;
        text-decoration: none;
    }

    .form .login-button {
        display: block;
        width: 100%;
        font-weight: bold;
        background: linear-gradient(45deg, #1089d3 0%, #12b1d1 100%);
        color: #fff;
        padding-block: 15px;
        margin: 20px auto;
        border-radius: 20px;
        box-shadow: rgba(133, 189, 215, 0.88) 0px 20px 10px -15px;
        border: none;
        transition: all 0.2s ease-in-out;
    }

    .form .login-button:hover {
        transform: scale(1.03);
        box-shadow: rgba(133, 189, 215, 0.88) 0px 23px 10px -20px;
    }

    .form .login-button:active {
        transform: scale(0.95);
        box-shadow: rgba(133, 189, 215, 0.88) 0px 15px 10px -10px;
    }

    .gradient-button {
        width: 600px;
        position: relative;
        display: inline-block;
        padding: 9px 20px;
        font-size: 1.25em;
        color: #fff;
        background: linear-gradient(45deg, #0ce39a, #69007f, #fc0987);
        border: none;
        border-radius: 10px;
        cursor: pointer;
        overflow: hidden;
        transition: transform 0.2s ease-in-out;
    }

    .gradient-button:focus:not(:focus-visible) {
        outline: none;
    }

    .gradient-button span {
        position: relative;
        z-index: 1;
    }

    .gradient-button::before {
        content: "";
        position: absolute;
        top: 1px;
        left: 1px;
        right: 1px;
        bottom: 1px;
        background: #200c95;
        border-radius: 9px;
        transition: opacity 0.5s;
        z-index: 0;
    }

    .gradient-button::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(45deg, #0ce39a, #69007f, #fc0987);
        border-radius: 9px;
        filter: blur(20px);
        opacity: 0;
        transition: opacity 0.5s;
        z-index: 0;
    }

    .gradient-button:hover::before {
        opacity: 0.7;
    }

    .gradient-button:hover::after {
        opacity: 1;
    }

    .gradient-button:hover {
        transform: scale(1.03);
    }

    .gradient-button:active {
        transform: scale(0.95);
    }

    .btn-container {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        margin-top: 15px;
    }

    .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .form-group {
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .form-label {
        width: 200px;
        font-size: 1rem;
        font-weight: bold;
        color: #000000;
        text-transform: uppercase;
        /* Adjust the width as needed */
        font-weight: bold;
        margin-right: 2rem;
        text-align: left;
    }
    .form-label-offre {
        width: 150px;
        font-size: 1rem;
        font-weight: bold;
        color: #000000;
        text-transform: uppercase;
        /* Adjust the width as needed */
        font-weight: bold;
        margin-right: 2rem;
        text-align: left;
    }

    .offre-value {
        flex: 1;
        /* Allow inputs to take up the remaining space */

        font-size: 1.2rem;
        font-weight: normal;
        color: #ffffff;
        background-color: transparent;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        display: inline-block;
    }

    .form-input {
        flex: 1;
        padding: 0.5rem;
        border: 1px solid #ced4da;
        border-radius: 0.375rem;
        font-size: 1rem;
    }

    .form-input,
    .offre-value {
        flex: 1;
        /* Allow inputs and values to take up the remaining space */
        padding: 0.5rem;
        border: 1px solid #ced4da;
        border-radius: 0.375rem;
        font-size: 1rem;
        background-color: #ffffff;
        /* Ensure consistent background */
        color: #000000;
        /* Ensure consistent text color */
    }
</style>
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-content">
        <h2>CRÃ‰ER UNE NOUVELLE CANDIDATURE</h2>
        <hr style="width: 400px; border: 4px solid #ffffff; margin: 0 auto 5rem auto; border-radius: 5px;">

        <!-- Display the Offre label and value -->



        {{ form_start(form, {'attr': {'class': 'form'}}) }}
        <div class="form-group">
            <label for="offre" class="form-label-offre" >Offre :</label>
            <p class="form-input offre-value">{{ form.offre.vars.data.titre }}</p>
        </div>
        {% do form.offre.setRendered %}
        <div class="form-group">
            <label for="cv" class="form-label">CV (PDF FILE) :</label>
            {{ form_widget(form.cv, {'attr': {'class': 'form-input'}}) }}
        </div>

        <div class="form-group">
            <label for="lettre_motivation" class="form-label">Lettre de Motivation :</label>
            {{ form_widget(form.lettre_motivation, {'attr': {'class': 'form-input'}}) }}
        </div>

        <div class="form-group">
            <label for="user" class="form-label">User :</label>
            {{ form_widget(form.user, {'attr': {'class': 'form-input'}}) }}
        </div>


        <div class="btn-container">
            <button type="submit" class="gradient-button">
                <span>Postuler</span>
            </button>
        </div>
        {{ form_end(form) }}

        <div class="btn-container">
            <a href="{{ path('app_offre_front_index') }}" class="gradient-button">
                <span>Retour</span>
            </a>
        </div>
    </div>
</div>
{% endblock %}