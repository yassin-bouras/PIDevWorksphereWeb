{% extends '/home/index.html.twig' %}

{% block title %} NOUVELLE {% endblock %}

{% block stylesheets %}
<style>
    .card {
        width: 800px;
        height: auto;
        position: relative;

        background: #33ccc5;
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        border-radius: 21px;
        padding: 3rem 2rem;
        /* Ajustement du padding pour un meilleur centrage */

        /* padding: 4rem 6rem 10rem 6rem; */
        /* padding: 3rem 10rem 2rem 4rem; */
        /* Reduced padding */
        text-align: center;
        margin: 10% auto;
    }

    .card h2 {
        z-index: 1;
        color: #ffffff;
        font-size: 2.2em;
        font-weight: bold;
        /* Texte en gras */
        margin-bottom: 3rem;
        text-align: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin-top: -10px;

    }

    .card::before {
        content: '';
        position: absolute;
        width: 150%;
        height: 150%;
        background-image: linear-gradient(180deg, rgb(0, 183, 255), rgb(255, 48, 255));
        animation: rotBGimg 3s linear infinite;
        transition: all 0.2s linear;
    }

    @keyframes rotBGimg {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    .card::after {
        content: '';
        position: absolute;
        /* background: #33ccc5; */
        background-image: linear-gradient(-45deg, #98d8ff 0%, #c68fc6 100%);

        inset: 5px;
        border-radius: 15px;
        z-index: 0;
    }

    .card-content {
        position: relative;
        z-index: 1;
        width: 100%;
    }

    .form {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 20px;
        width: 100%;
    }

    .form .input {
        width: 80%;
        background: #fff;
        border: none;
        padding: 15px 20px;
        border-radius: 20px;
        margin-top: 15px;
        box-shadow: #cff0ff 0px 10px 10px -5px;
        border-inline: 2px solid transparent;
    }

    .form .input::placeholder {
        color: #aaaaaa;
    }

    .form .input:focus {
        outline: none;
        border-inline: 2px solid #12b1d1;
    }

    .form .forgot-password {
        display: block;
        margin-top: 10px;
        margin-left: 10px;
    }

    .form .forgot-password a {
        font-size: 11px;
        color: #0099ff;
        text-decoration: none;
    }

    .form .login-button {
        display: block;
        width: 100%;
        font-weight: bold;
        background: linear-gradient(45deg, #1089d3 0%, #12b1d1 100%);
        color: #fff;
        padding-block: 15px;
        margin: 20px auto;
        border-radius: 20px;
        box-shadow: rgba(133, 189, 215, 0.88) 0px 20px 10px -15px;
        border: none;
        transition: all 0.2s ease-in-out;
    }

    .form .login-button:hover {
        transform: scale(1.03);
        box-shadow: rgba(133, 189, 215, 0.88) 0px 23px 10px -20px;
    }

    .form .login-button:active {
        transform: scale(0.95);
        box-shadow: rgba(133, 189, 215, 0.88) 0px 15px 10px -10px;
    }

    .gradient-button {
        width: 600px;
        position: relative;
        display: inline-block;
        padding: 9px 20px;
        font-size: 1.25em;
        color: #fff;
        background: linear-gradient(45deg, #0ce39a, #69007f, #fc0987);
        border: none;
        border-radius: 10px;
        cursor: pointer;
        overflow: hidden;
        transition: transform 0.2s ease-in-out;
    }

    .gradient-button:focus:not(:focus-visible) {
        outline: none;
    }

    .gradient-button span {
        position: relative;
        z-index: 1;
    }

    .gradient-button::before {
        content: "";
        position: absolute;
        top: 1px;
        left: 1px;
        right: 1px;
        bottom: 1px;
        background: #472fd2;
        border-radius: 9px;
        transition: opacity 0.5s;
        z-index: 0;
    }

    .gradient-button::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(45deg, #0ce39a, #69007f, #fc0987);
        border-radius: 9px;
        filter: blur(20px);
        opacity: 0;
        transition: opacity 0.5s;
        z-index: 0;
    }

    .gradient-button:hover::before {
        opacity: 0.7;
    }

    .gradient-button:hover::after {
        opacity: 1;
    }

    .gradient-button:hover {
        transform: scale(1.03);
    }

    .gradient-button:active {
        transform: scale(0.95);
    }

    .btn-container {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        margin-top: 15px;
    }

    .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .form-group {
        display: flex;
        align-items: center;
        flex-direction: column;
        margin-bottom: 1.5rem;
        justify-content: space-between; /* Add space between label and input */
    }

    .form-label {
        width: 400px; /* Adjust the width as needed */
        font-size: 1rem;
        font-weight: bold;
        color: #000000;
        text-transform: uppercase;
        /* Adjust the width as needed */
        font-weight: bold;
        margin-right: 2rem;
        text-align: left;
        margin-bottom: 0.5rem;
    }
    .form-label-offre {
        width: 235px;
        font-size: 1rem;
        font-weight: bold;
        color: #000000;
        text-transform: uppercase;
        /* Adjust the width as needed */
        font-weight: bold;
        margin-right: 0;
        text-align: left;
        padding: 0.5rem 1rem; /* Add padding to match the Choose File button */
        white-space: nowrap; /* Prevent the text from wrapping */
        overflow: hidden; /* Hide overflowing text */
        text-overflow: ellipsis; /* Add ellipsis (...) for overflowing text */
    }

    
    .offre-value {
    flex: 1;
    margin-top: -10px; /* Keep the current vertical alignment */
    font-size: 0.9rem; /* Reduce the font size */
    font-weight: normal; /* Keep the font weight normal */
    color: #ffffff;
    background-color: transparent;
    padding: 0.5rem; /* Reduce padding for a smaller size */
    border-radius: 5px;
    display: block;
    text-align: center;
    width: 80%;
    overflow: visible; /* Ensure no text is hidden */
    text-overflow: ellipsis; /* Add ellipsis (...) for overflowing text */
    white-space: normal; /* Prevent text wrapping */
}

    .form-input {
        flex: 1;
        padding: 0.5rem;
        border: 1px solid #ced4da;
        border-radius: 0.375rem;
        font-size: 1rem;
    }

    .form-input,
    .offre-value {
        flex: 1;
        /* Allow inputs and values to take up the remaining space */
        padding: 0.5rem;
        border: 1px solid #ced4da;
        border-radius: 0.375rem;
        font-size: 1rem;
        background-color: #ffffff;
        /* Ensure consistent background */
        color: #000000;
        /* Ensure consistent text color */
    }

    .form-group-offre {
    display: flex;
    align-items: center; /* Center vertically */
    justify-content: flex-start; /* Center horizontally */
    margin-top: -50px; /* Move the Offre section closer to the line */
    width: 90%;
    margin-bottom: 1rem; /* Remove extra space below the Offre label */
}

.form-group-labels {
    margin-top: 20px; /* Move the Offre section closer to the line */
}

.gradient-button.retour-button {
    background: #ffffff; /* Set the background color to white */
    color: #000000; /* Set the text color to black */
    border: 2px solid #000000; /* Optional: Add a black border */
    transition: all 0.3s ease; /* Smooth transition for hover effects */
}

.gradient-button.retour-button:hover {
    background: #f0f0f0; /* Slightly darker white on hover */
    color: #ffffff; /* Keep the text color black */
    transform: scale(1.05); /* Slightly enlarge the button on hover */
}

    .invalid-feedback {
        /* display: block;  */
        margin-top: 0.5rem; /* Add a small margin between the input and the error message */
        font-size: 0.875rem; /* Optional: Adjust font size for better readability */
        color: #dc3545; /* Red color for error messages */
    }

    .form-control {
        flex: 1; /* Allow the input to take up the remaining space */
        padding: 0.5rem; /* Add padding for better appearance */
        font-size: 1rem; /* Adjust font size */
        border: 1px solid #ced4da; /* Add a border */
        border-radius: 0.375rem; /* Add rounded corners */
    }
    .form-control.is-invalid {
        border-color: #dc3545; /* Red border for invalid inputs */
    }
</style>
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-content">
        <h2>CRÃ‰ER UNE NOUVELLE CANDIDATURE</h2>
        <hr style="width: 400px; border: 4px solid #ffffff; margin: 0 auto 5rem auto; border-radius: 5px;">

        <!-- Display the Offre label and value -->
        <div class="form-group form-group-offre">
            <!-- <label for="offre" class="form-label" >Offre :</label> -->
            <p class="form-input offre-value">{{ form.offre.vars.data.titre }}</p>
        </div>
        {% do form.offre.setRendered %}


        {{ form_start(form, {'attr': {'class': 'form'}}) }}
        
        <div class="form-group form-group-labels" style="margin-bottom: 2rem;">
            <label for="cv" class="form-label">CV (PDF FILE) :</label>
            {{ form_widget(form.cv, {
                'attr': {
                    'class': 'form-control' ~ (form.cv.vars.errors|length ? ' is-invalid' : '')
                }
            }) }}
            {% if form.cv.vars.errors %}
                <div class="invalid-feedback">
                    {% for error in form.cv.vars.errors %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
        
        <div class="form-group" style="margin-bottom: 2rem;">
            <label for="lettre_motivation" class="form-label">Lettre de Motivation :</label>
            {{ form_widget(form.lettre_motivation, {
                'attr': {
                    'class': 'form-control' ~ (form.lettre_motivation.vars.errors|length ? ' is-invalid' : '')
                }
            }) }}
            {% if form.lettre_motivation.vars.errors %}
                <div class="invalid-feedback">
                    {% for error in form.lettre_motivation.vars.errors %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>

       


        <div class="btn-container">
            <button type="submit" class="gradient-button">
                <span>Postuler</span>
            </button>
        </div>
        {{ form_end(form) }}

        <div class="btn-container">
            <a href="{{ path('app_offre_front_index') }}" class="gradient-button">
                <span>Retour</span>
            </a>
        </div>
        
    </div>
</div>
{% endblock %}