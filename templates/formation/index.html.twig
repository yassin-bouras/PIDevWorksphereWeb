{% extends '/dashboard/base.html.twig' %}
{% block title %}Formations{% endblock %}
{% block content %}
    <div class="container" style="margin-top:7%;">
        <h1 class="text-center mb-5" style="font-weight: 600; color: #333;">Liste des Formations</h1>
        <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}"></a></li>
        <div class="text-center mb-4">
            <a href="{{ path('app_formation_new') }}" class="btn" style="background-color: #00882E; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none;">
                <i data-feather="plus-circle" class="me-1"></i> Créer une formation
            </a>
            <!-- <a href="{{ path('app_recommendation') }}" 
            class="btn" 
            style="background-color: #FFD700; color: black; padding: 10px 20px; border-radius: 5px; text-decoration: none;">
             <i data-feather="star" class="me-1"></i> Recommandation
         </a> -->

         <a href="{{ path('app_certificate') }}" 
         class="btn" 
         style="background-color: #ff8800; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none;">
          <i data-feather="award" class="me-1"></i> Certification
      </a>
      
        </div>

        <div class="formation-grid" style="max-width: 1060px; margin: 0 auto;">
            <div class="search-bar mb-5 text-center">
                <form method="get" action="{{ path('app_formation_search1') }}" class="d-inline-block" style="max-width: 600px; width: 100%;">
                    <div class="input-group shadow-sm" style="border-radius: 30px; overflow: hidden;">
                        <input type="text" name="search" class="form-control py-2 border-0" 
                               placeholder="Rechercher une formation..." 
                               value="{{ app.request.get('search') }}">
                        <button class="btn btn-primary"
                                style="background-color:#4771cb; border: none; padding: 0 25px;">
                            <i class="fas fa-search me-2"></i>Rechercher
                        </button>
                    </div>
                </form>
            </div>


            <div class="filters mb-4 text-center">
                <form method="get" action="{{ path('app_formation_filter1') }}" class="d-flex justify-content-center flex-wrap gap-3">
                    <select name="certifie" class="form-select w-auto">
                        <option value="">Avec ou sans certificat</option>
                        <option value="oui" {% if app.request.get('certifie') == 'oui' %}selected{% endif %}>Avec certificat</option>
                        <option value="non" {% if app.request.get('certifie') == 'non' %}selected{% endif %}>Sans certificat</option>
                    </select>
            
                    <select name="type" class="form-select w-auto">
                        <option value="">Type</option>
                        <option value="présentiel" {% if app.request.get('type') == 'présentiel' %}selected{% endif %}>Présentiel</option>
                        <option value="distanciel" {% if app.request.get('type') == 'distanciel' %}selected{% endif %}>Distanciel</option>
                    </select>
            
                    <select name="langue" class="form-select w-auto">
                        <option value="">Langue</option>
                        <option value="français" {% if app.request.get('langue') == 'français' %}selected{% endif %}>Français</option>
                        <option value="anglais" {% if app.request.get('langue') == 'anglais' %}selected{% endif %}>Anglais</option>
                    </select>
            
                    <button class="btn btn-primary" type="submit" style="background-color:#4771cb; border: none; width: 70px;">Filtrer</button>
                </form>
            </div>
            
        
            {% for formation in formations %}
                <div class="formation-card" style="background: white; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); padding: 20px; margin-bottom: 25px; display: flex; align-items: center;">
                    
                    {% if formation.photo %}
                        <div class="formation-image" style="margin-right: 15px;">
                            <img src="{{ asset(formation.photo) }}" alt="Image formation" width="100" height="100" style="object-fit: cover; border-radius: 8px;">
                        </div>
                    {% endif %}

                    <div style="flex: 1;">
                        <div class="formation-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;">
                            <h2 style="margin: 0; font-size: 1.5rem; color: #333;">{{ formation.titre }}</h2>
                            <span style="padding: 6px 12px; border-radius: 20px; font-weight: bold; font-size: 0.9rem; color: white; background-color: #4771cb;">
                                {{ formation.type }}
                            </span>

                            
                        </div>

                        <div class="formation-info" style="margin-bottom: 10px;">
                            <p style="margin: 5px 0; color: #555;"><strong>Description :</strong> {{ formation.description }}</p>
                            <p style="margin: 5px 0; color: #555;"><strong>Date :</strong> {{ formation.date ? formation.date|date('Y-m-d') : 'N/A' }}</p>
                            <p style="margin: 5px 0; color: #555;"><strong>Langue:</strong> {{ formation.langue }} </p>
                            <p style="margin: 5px 0; color: #555;"><strong>Certification:</strong>{{ formation.certifie }} </p>
                            <p style="margin: 5px 0; color: #555;"><strong>Places :</strong> {{ formation.nbPlace }}</p>
                        </div>

                        <div class="formation-actions" style="display: flex; gap: 10px;">
                            <a class="btn" href="{{ path('app_formation_show', {'id_f': formation.idF}) }}" style="background-color: #4771cb; color: white; padding: 8px 15px; border-radius: 5px; text-decoration: none; font-size: 0.9rem;">Voir details <i data-feather="eye"></i> </a>
                            <a class="btn" href="{{ path('app_formation_edit', {'id_f': formation.idF}) }}" style="background-color: #f88f33; color: white; padding: 8px 15px; border-radius: 5px; text-decoration: none; font-size: 0.9rem;">Modifier<i data-feather="edit-3"></i></a>
                            <a class="btn" href="{{ path('app_formation_assign_cours', {'id_f': formation.idF}) }}" style="background-color: #00882E; color: white; padding: 8px 15px; border-radius: 5px; text-decoration: none; font-size: 0.9rem;"> Assigner <i data-feather="plus-square"></i></a>
                            {% if formation.type == 'distanciel' %}
                            <a class="btn" href="{{ path('app_meeting', {'roomName': 'formation-' ~ formation.idF}) }}"
                            style="background-color: #007BFF; color: white; padding: 8px 15px; border-radius: 5px; text-decoration: none; font-size: 0.9rem;">
                             Meet <i data-feather="video"></i>
                         </a>
                        {% endif %}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="no-formations" style="text-align: center; padding: 40px; background: white; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
                    <p style="font-size: 1.2rem; color: #777;">Aucune formation trouvée</p>
                </div>
            {% endfor %}
        </div>
    </div>

    <style>
        .btn:hover {
            opacity: 0.9;
            transform: translateY(-1px);
        }
        .formation-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .formation-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
    </style>
{% endblock %}
