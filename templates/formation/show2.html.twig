{% extends '/dashboard/base2.html.twig' %}

{% block title %}Détails de la Formation{% endblock %}

{% block content %}
<div class="container" style="margin-top:-50%;">
    <h1 class="text-center mb-5" style="font-weight: 600; color: #2c3e50;">Détails de la Formation</h1>
    <div class="formation-details" style="background: rgba(255, 255, 255, 0.95); border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); padding: 30px; margin-bottom: 30px; border: 1px solid rgba(0,0,0,0.05);">
        <div class="row align-items-center">
            <div class="col-md-4 text-center mb-4">
                {% if formation.photo %}
                    <img src="{{ asset(formation.photo) }}" alt="Image Formation" class="img-fluid rounded shadow" style="max-width: 90%; border: 1px solid rgba(0,0,0,0.1);">
                {% else %}
                    <div style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); padding: 60px 20px; border-radius: 8px; color: #6c757d; box-shadow: inset 0 0 10px rgba(0,0,0,0.05);">
                        <i class="fas fa-image" style="font-size: 2rem; opacity: 0.5;"></i>
                        <p class="mt-2">Pas d'image disponible</p>
                    </div>
                {% endif %}
            </div>

            <div class="col-md-8">
                <div class="row">
                    {% set infos = {
                        'Titre': formation.titre,
                        'Description': formation.description,
                        'Date de début': formation.date ? formation.date|date('d/m/Y') : 'N/A',
                        'Certification': formation.certifie ? '<span class="badge" style="color: white; background-color: rgb(38, 227, 38)">Oui</span>' : '<span class="badge" style="background-color: #9e9e96;" >Non</span>',
                        'Places disponibles': '<span class="badge" style="background-color: #33ccc5;">' ~ formation.nbPlace ~ '</span>',
                        'Type': '<span class="badge bg-info">' ~ formation.type ~ '</span>',
                        'Langue': '<span class="badge text-dark" style="background-color: #fafd63;">' ~ formation.langue ~ '</span>',
                        'Cours': '<a href="' ~ path('app2_formation_cours', {'id_f': formation.idF}) ~ '" 
                        class="btn" 
                        style="background-color: #e09ec7; color: white; padding: 8px 18px; border-radius: 30px; text-decoration: none; transition: all 0.3s; display: inline-block;">
                        <i class="fas fa-book-open me-2"></i>Voir les cours
                     </a>'
                    } %}

                    {% for label, value in infos %}
                        <div class="col-md-6 mb-4">
                            <h5 class="text-primary mb-3" style="font-weight: 600; border-bottom: 2px solid #33ccc5; padding-bottom: 5px; display: inline-block;">{{ label }}</h5>
                            <div style="font-size: 1.1rem; color: #495057; margin-top: 8px;">{{ value|raw }}</div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
            <!-- Notation -->
            <div class="mt-4 text-center">
                <h5 class="text-primary mb-3" style="font-weight: 600;">Votre évaluation</h5>
                <div id="rating-stars" class="d-inline-flex align-items-center justify-content-center" style="font-size: 1.8rem; color: #ccc; cursor: pointer;">
                    {% for i in 1..5 %}
                        <i class="fas fa-star" data-value="{{ i }}"></i>
                    {% endfor %}
                    <span id="rating-value" class="ms-3 text-muted" style="font-size: 1rem;"></span>
                </div>
            </div>
            
</div>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('app_formation_index2') }}" class="btn" style="background-color: #6c757d; color: white; padding: 10px 25px; border-radius: 30px; text-decoration: none; margin-right: 15px; transition: all 0.3s;">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>
        <a href="{{ path('app_formation_reservation_new', {'id_f': formation.idF}) }}" class="btn " style="background-color: #4771cb; color: white; padding: 10px 25px; border-radius: 30px; text-decoration: none; transition: all 0.3s;">
            <i class="fas fa-calendar-check me-2"></i>Réserver
        </a>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const stars = document.querySelectorAll('#rating-stars .fa-star');
        const valueDisplay = document.getElementById('rating-value');
        const storageKey = 'formation_rating_{{ formation.idF }}';

        // Charger note sauvegardée
        let savedRating = localStorage.getItem(storageKey);
        if (savedRating) {
            highlightStars(savedRating);
            valueDisplay.textContent = `Vous avez noté ${savedRating}/5`;
        }

        stars.forEach(star => {
            star.addEventListener('mouseover', function () {
                highlightStars(this.dataset.value);
            });

            star.addEventListener('mouseout', function () {
                highlightStars(savedRating);
            });

            star.addEventListener('click', function () {
                savedRating = this.dataset.value;
                localStorage.setItem(storageKey, savedRating);
                highlightStars(savedRating);
                valueDisplay.textContent = `Vous avez noté ${savedRating}/5`;
            });
        });

        function highlightStars(rating) {
            stars.forEach(star => {
                if (parseInt(star.dataset.value) <= rating) {
                    star.style.color = '#ffc107'; // or gold
                } else {
                    star.style.color = '#ccc';
                }
            });
        }
    });
</script>

<style>
      #rating-stars .fa-star:hover {
        transform: scale(1.2);
    }
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
        background-attachment: fixed;
    }
    .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        opacity: 0.9;
    }
    .formation-details {
        transition: all 0.4s ease;
        backdrop-filter: blur(5px);
    }
    .formation-details:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.12);
    }
    .text-primary {
        color: #4771cb !important;
    }
    .badge {
        font-weight: 500;
        padding: 6px 10px;
    }
</style>
{% endblock %}