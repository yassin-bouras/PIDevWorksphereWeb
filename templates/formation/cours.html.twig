{% extends '/dashboard/base.html.twig' %}

{% block title %}Cours de la Formation{% endblock %}

{% block content %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- En-tête avec bouton Retour -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0" style="font-weight: 600; color: #2c3e50; margin-top:50px;margin-left:20%;">
                    Cours de la formation:
                </h2>
                <div style="width: 100px;"></div>
            </div>

            <h4 class="text-center mb-4" style="color: #6c757d;">
                {{ formation.titre }}
            </h4>

            <!-- Liste des cours -->
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    {% if cours is not empty %}
                        <ul class="list-group list-group-flush">
                            {% for c in cours %}
                                <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                                    <div>
                                        <h5 class="mb-1" style="color: #3498db;">{{ c.NomC }}</h5>
                                        <small class="text-muted">Cours n°{{ loop.index }}</small>
                                    </div>
                                    <button class="btn btn-sm btn-outline-secondary toggle-details" data-target="details-{{ loop.index }}">
                                        <i class="fas fa-info-circle me-1"></i>Détail
                                    </button>
                                </li>

                                <!-- Détails du cours en dessous -->
                                <li class="list-group-item bg-light d-none" id="details-{{ loop.index }}">
                                    <div class="p-3">
                                        <div class="row">
                                            <div class="col-md-4 text-center mb-3">
                                                {% if c.photo %}
                                                    <img src="{{ asset(c.photo) }}" alt="Image du Cours" class="img-fluid rounded" style="max-height: 250px; object-fit: cover; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
                                                {% else %}
                                                    <div class="bg-light p-4 rounded text-muted border">
                                                        <i class="fas fa-image fa-3x mb-2"></i>
                                                        <p class="mb-0">Pas d'image disponible</p>
                                                    </div>
                                                {% endif %}
                                            </div>
                                            <div class="col-md-8">
                                                <h5 class="text-primary">Description</h5>
                                                <p>{{ c.descriptionC|nl2br }}</p>
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <strong>Date:</strong><br>
                                                        {{ c.date ? c.date|date('d/m/Y') : 'N/A' }}
                                                    </div>
                                                    <div class="col-md-4">
                                                        <strong>Heure début:</strong><br>
                                                        {{ c.heureDebut ? c.heureDebut|date('H:i') : 'N/A' }}
                                                    </div>
                                                    <div class="col-md-4">
                                                        <strong>Heure fin:</strong><br>
                                                        {{ c.heureFin ? c.heureFin|date('H:i') : 'N/A' }}
                                                    </div>
                                                </div>
                                                {% if is_granted('ROLE_ADMIN') %}
                                                    <div class="mt-3">
                                                        <a href="{{ path('app_cour_edit', {'id_c': c.idC}) }}" class="btn btn-warning btn-sm">
                                                            <i class="fas fa-edit me-1"></i> Modifier
                                                        </a>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <div class="text-center p-4">
                            <i class="fas fa-book fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucun cours disponible</h5>
                            <p class="small">Cette formation ne contient pas encore de cours.</p>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Bouton Retour -->
            <div class="text-center mt-4">
                <a href="{{ path('app_formation_show', {'id_f': formation.idF}) }}" class="btn" style="background-color: #4771cb; color: white; padding: 7px 25px; border-radius: 8px; text-decoration: none; margin-right: 15px; transition: all 0.3s;">
                    <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Styles -->
<style>
    .list-group-item {
        transition: all 0.3s ease;
    }
    .list-group-item:hover {
        background-color: #f8f9fa;
    }
    .btn-outline-secondary {
        border-radius: 20px;
        padding: 5px 15px;
    }
    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }
</style>

<!-- Script pour afficher/cacher les détails -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.toggle-details').forEach(button => {
            button.addEventListener('click', function () {
                const targetId = this.getAttribute('data-target');
                const target = document.getElementById(targetId);
                if (target) {
                    target.classList.toggle('d-none');
                }
            });
        });
    });
</script>
{% endblock %}
