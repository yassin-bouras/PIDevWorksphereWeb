{% extends '/home/index.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}
<div class="container" style="margin-top: 7%;">
    <h1 class="text-center mb-5" style="font-weight: 600; color: #333;">Liste des Formations</h1>
    <div class="mb-4">
        <form method="get" action="{{ path('app_formation_search') }}">
            <div class="input-group mb-3">
                <input type="text" name="search" class="form-control" placeholder="Rechercher une formation..." value="{{ app.request.get('search') }}">
                <button class="btn btn-primary" type="submit" style="background-color:#4771cb; border-color: #4771cb;">
                    Rechercher
                </button>
            </div>
        </form>
    </div>
    {% if formations is not empty %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for formation in formations %}
                <div class="col">
                    <div class="card h-100 shadow-sm" style="border-radius: 10px;">
                        {% if formation.photo %}
                            <img src="{{ asset(formation.photo) }}" class="card-img-top" alt="Image Formation" style="height: 180px; object-fit: cover; border-top-left-radius: 10px; border-top-right-radius: 10px;">
                        {% else %}
                            <div class="d-flex align-items-center justify-content-center bg-light" style="height: 180px; color: #999;">Pas d'image</div>
                        {% endif %}

                        <div class="card-body">
                            <h5 class="card-title">{{ formation.titre }}</h5>
                            <!-- <p class="card-text">{{ formation.description|slice(0, 100) }}{% if formation.description|length > 100 %}...{% endif %}</p> -->
                            <ul class="list-unstyled mb-3">
                                <li><strong>Date :</strong> {{ formation.date ? formation.date|date('Y-m-d') : 'N/A' }}</li>
                                <li><strong>Heure début :</strong> {{ formation.heureDebut ? formation.heureDebut|date('H:i') : 'N/A' }}</li>
                                <li><strong>Heure fin :</strong> {{ formation.heureFin ? formation.heureFin|date('H:i') : 'N/A' }}</li>
                                <!-- <li><strong>Places :</strong> {{ formation.nbPlace }}</li>
                                <li><strong>Type :</strong> {{ formation.type }}</li> -->
                            </ul>
                            <a href="{{ path('app_formation_show2', {'id_f': formation.idF}) }}" class="btn btn-primary" style="background-color: #4771cb; border: none; margin-left: 150px;">Voir Détails</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center mt-4" style="color: #777;">
            Aucune formation trouvée.
        </div>
    {% endif %}

    <div class="text-center mt-5">
        <a href="{{ path('app_home') }}" class="btn" style="background-color: rgb(51, 204, 197); color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none;">
            Retour au home
        </a>
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }
    .card-title {
        font-weight: 600;
        color: #333;
    }
    .card-text {
        color: #555;
        font-size: 0.95rem;
    }
</style>
{% endblock %}
