{% extends '/dashboard/base.html.twig' %}

{% block title %}Détails du partenariat{% endblock %}

{% block content %}
<div class="content container-fluid" style="margin-top: -58%;">
    <div class="row">
        <div class="col-xl-12 col-sm-12 col-12">
            <div class="breadcrumb-path mb-4">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_sponsor_index') }}">Sponsors</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_sponsor_events', {'idSponsor': evenement_sponsor.sponsor.idSponsor}) }}">Événements de {{ evenement_sponsor.sponsor.nomSponso }}</a></li>
                    <li class="breadcrumb-item active">Détails du partenariat</li>
                </ul>
                <h3>Détails du partenariat</h3>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Partenariat entre {{ evenement_sponsor.sponsor.nomSponso }} et {{ evenement_sponsor.evenement.nomEvent }}</h4>
                    <!-- <div class="card-actions">
                        <a href="{{ path('app_evenement_sponsor_edit', {'evenement_id': evenement_sponsor.evenement.idEvent, 'sponsor_id': evenement_sponsor.sponsor.idSponsor}) }}" 
                           class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                    </div> -->
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-center mb-0">
                            <tbody>
                                <tr>
                                    <th class="w-30">Événement</th>
                                    <td>
                                        <strong>{{ evenement_sponsor.evenement.nomEvent }}</strong><br>
                                        <small class="text-muted">{{ evenement_sponsor.evenement.lieuEvent }}</small>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Sponsor</th>
                                    <td>
                                        <strong>{{ evenement_sponsor.sponsor.nomSponso }}</strong><br>
                                        <small class="text-muted">{{ evenement_sponsor.sponsor.emailSponso }}</small>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Date de début du contrat</th>
                                    <td>{{ evenement_sponsor.datedebutContrat ? evenement_sponsor.datedebutContrat|date('d/m/Y') : 'Non spécifiée' }}</td>
                                </tr>
                                <tr>
                                    <th>Durée du contrat</th>
                                    <td>
                                        {% if evenement_sponsor.duree == 'troisMois' %}
                                            3 Mois
                                        {% elseif evenement_sponsor.duree == 'sixMois' %}
                                            6 Mois
                                        {% elseif evenement_sponsor.duree == 'unAns' %}
                                            1 An
                                        {% else %}
                                            {{ evenement_sponsor.duree ?? 'Non spécifiée' }}
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Date de fin estimée</th>
                                    <td>
                                        {% if evenement_sponsor.datedebutContrat and evenement_sponsor.duree %}
                                            {% set dateFin = evenement_sponsor.datedebutContrat|date_modify(
                                                evenement_sponsor.duree == 'troisMois' ? '+3 months' :
                                                evenement_sponsor.duree == 'sixMois' ? '+6 months' : '+1 year'
                                            ) %}
                                            {{ dateFin|date('d/m/Y') }}
                                            {% if dateFin < date() %}
                                                <span class="badge bg-danger ms-2">Contrat expiré</span>
                                            {% endif %}
                                        {% else %}
                                            Non calculable
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Statut du contrat</th>
                                    <td>
                                        {% if evenement_sponsor.datedebutContrat and evenement_sponsor.duree %}
                                            {% set dateFin = evenement_sponsor.datedebutContrat|date_modify(
                                                evenement_sponsor.duree == 'troisMois' ? '+3 months' :
                                                evenement_sponsor.duree == 'sixMois' ? '+6 months' : '+1 year'
                                            ) %}
                                            {% if dateFin < date() %}
                                                <span class="badge bg-danger">Expiré</span>
                                            {% else %}
                                                <span class="badge bg-success">Actif</span>
                                                (expire dans {{ dateFin.diff(date()).days }} jours)
                                            {% endif %}
                                        {% else %}
                                            <span class="badge bg-secondary">Indéterminé</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-4 d-flex justify-content-between">
                        <a href="{{ path('app_sponsor_events', {'idSponsor': evenement_sponsor.sponsor.idSponsor}) }}" 
                           class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i> Retour à la liste
                        </a>
                        <div>
                            {{ include('evenement_sponsor/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .table th {
        width: 30%;
        vertical-align: middle;
    }
    .table td {
        vertical-align: middle;
    }
    .card-actions {
        float: right;
    }
    .btn-delete {
        background-color: #f46a6a;
        color: white;
    }
    .btn-delete:hover {
        background-color: #d62c2c;
        color: white;
    }
    .badge.bg-danger {
        font-size: 0.8em;
        padding: 0.35em 0.65em;
    }
</style>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
$(document).ready(function() {
    // Activation des tooltips
    $('[data-bs-toggle="tooltip"]').tooltip();
});
</script>
{% endblock %}