{% extends '/dashboard/base2.html.twig' %}

{% block title %}HR News{% endblock %}

{% block content %}
    <div class="container" style="margin-top:-55%;">
        <h1 class="text-center mb-5">last  News</h1>

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        <div class="row row-cols-1 row-cols-md-2 g-4">
            {% for article in news %}
                <div class="col">
                    <div class="card news-card h-100">
                        <img src="{{ article.image_url }}" class="card-img-top" alt="News Image">
                        <div class="card-body">
                            <div class="news-meta d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted small">{{ article.pubDate ? article.pubDate|date('d M Y') : 'N/A' }}</span>
                                <span class="badge bg-light text-dark text-capitalize">{{ article.category }}</span>
                            </div>
                            <h2 class="card-title">{{ article.title }}</h2>
                            <p class="card-text text-muted">{{ article.description }}</p>
                            <div class="news-actions">
                                
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col">
                    <div class="card no-news text-center">
                        <div class="card-body">
                            <p class="fs-5 text-muted">No HR news found</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <style>
        /* General Layout */
        .container {
            max-width: 1200px;
        }

        h1 {
            font-weight: 700;
            color: #1a1a1a;
            font-size: 2rem;
        }

        /* Card Styling */
        .news-card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
        }

        .news-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
        }

        .card-body {
            padding: 1.5rem;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 0.75rem;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }

        .card-text {
            font-size: 0.95rem;
            color: #495057;
            margin-bottom: 1rem;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
        }

        .news-meta .text-muted {
            font-size: 0.85rem;
        }

        .badge {
            font-size: 0.85rem;
            padding: 0.4rem 0.8rem;
            border-radius: 6px;
        }

        /* Buttons */
        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
            font-size: 0.9rem;
            padding: 0.6rem 1.2rem;
            border-radius: 6px;
            transition: all 0.3s ease;
        }

        .btn-info:hover {
            background-color: #138496;
            border-color: #138496;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        }

        .btn-info i {
            font-size: 0.85rem;
        }

        /* No News Card */
        .no-news {
            border: none;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            padding: 2rem;
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            h1 {
                font-size: 1.75rem;
            }

            .card-title {
                font-size: 1.1rem;
            }

            .card-text {
                font-size: 0.9rem;
            }

            .btn-info {
                padding: 0.5rem 1rem;
                font-size: 0.85rem;
                width: 100%;
                text-align: center;
            }

            .card-img-top {
                height: 150px;
            }
        }

        @media (max-width: 576px) {
            .card-body {
                padding: 1rem;
            }

            .no-news {
                padding: 1.5rem;
            }
        }
    </style>
{% endblock %}