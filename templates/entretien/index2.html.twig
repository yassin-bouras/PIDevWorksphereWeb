{% extends '/dashboard/base2.html.twig' %}

{% block title %}Entretiens{% endblock %}

{% block content %}
    <div class="container" style="margin-top:-50%;">
        <h1 class="text-center mb-5" style="font-weight: 600; color: #333;">Liste des Entretiens</h1>

        <div class="event-grid" style="max-width: 1060px; margin: 0 auto;">
            {% for entretien in entretiens %}
                <div class="event-card" style="background: white; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); padding: 20px; margin-bottom: 25px;">
                    <div class="event-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
                        <h2 style="margin: 0; font-size: 1.5rem; color: #333;">{{ entretien.titre }}</h2>
                        <span style="background-color: #f0f0f0; padding: 5px 10px; border-radius: 4px; font-size: 0.9rem;">Type: {{ entretien.typeEntretien }}</span>
                    </div>
                    
                    <div class="event-info" style="margin-bottom: 15px;">
                        <p style="margin: 5px 0; color: #555;"><strong>Description:</strong> {{ entretien.description }}</p>
                        <p style="margin: 5px 0; color: #555;"><strong>Date:</strong> {{ entretien.dateEntretien ? entretien.dateEntretien|date('Y-m-d') : 'N/A' }}</p>
                        <p style="margin: 5px 0; color: #555;"><strong>Heure:</strong> {{ entretien.heureEntretien ? entretien.heureEntretien|date('H:i:s') : 'N/A' }}</p>
                        <p style="margin: 5px 0; color: #555;"><strong>Status:</strong> {{ entretien.status ? 'Yes' : 'No' }}</p>                
                        
                         </div>
                    
                    <div class="event-actions" style="display: flex; gap: 10px;">
                        <a class="btn" href="{{ path('app_entretien_show', {'id': entretien.id}) }}" style="background-color: #4a6fa5; color: white; padding: 8px 15px; border-radius: 5px; text-decoration: none; font-size: 0.9rem;">Voir details entretien</a>
                        {% if entretien.feedback is  null %}
                        <a class="btn" href="{{ path('app_feedback_news', {'id': entretien.id}) }}" style="background-color: #FF8C00; color: white; padding: 8px 15px; border-radius: 5px; text-decoration: none; font-size: 0.9rem;">Ajouter Feedback</a>
                        {% else %}
                        <a class="btn" href="{{ path('app_feedback_show', {'id': entretien.feedback.id}) }}" style="background-color: #FF8C00; color: white; padding: 8px 15px; border-radius: 5px; text-decoration: none; font-size: 0.9rem;">voir  Feedback</a>
                        {% endif %}

                        {% if not entretien.status %}
                            <form method="post" action="{{ path('entretien_change_status', {'id': entretien.id}) }}" class="change-status-form" style="display: inline;">
                                <button type="submit"
                                        class="btn"
                                        {% if entretien.feedback is null %}disabled{% endif %}
                                        style="background-color: #28a745; color: white; padding: 8px 15px; border-radius: 5px; font-size: 0.9rem; border: none; cursor: pointer;">
                                    Marquer comme terminé
                                </button>
                            </form>
                        {# {% else %}
                            <span style="background-color: #e0ffe0; color: #28a745; padding: 8px 15px; border-radius: 5px; font-size: 0.9rem;">Entretien terminé</span> #}
                        {% endif %}
                        

                        <a href="{{ path('app_entretien_generate_questions', {'id': entretien.id}) }}" 
                            class="btn btn-info"
                            target="_blank">
                                <i class="fas fa-file-pdf"></i> Générer des questions (PDF)
                            </a>

                        <a href="{{ path('entretien_calendar') }}" 
                       class="btn btn-info">
                       <i class="fas fa-calendar-day"></i> Visualiser dans le calendrier
                    </a>


                    </div>
                </div>
            {% else %}
                <div class="no-events" style="text-align: center; padding: 40px; background: white; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
                    <p style="font-size: 1.2rem; color: #777;">Aucun entretien trouvé</p>
                </div>
            {% endfor %}
        </div>
    </div>

    <!-- Modal Structure -->
    <div id="errorModal" class="modal" tabindex="-1" role="dialog" style="display: none;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Erreur</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Vous devez d'abord fournir un feedback avant de marquer l'entretien comme terminé.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>


    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script>
        function checkFeedback(event, hasNoFeedback, entretienId) {
            if (hasNoFeedback === 'true') {
                event.preventDefault();  
                $('#errorModal').modal('show');
            }
        }
    </script>

    <style>
        .btn:hover {
            opacity: 0.9;
            transform: translateY(-1px);
        }
        .event-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .event-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
    </style>
{% endblock %}








