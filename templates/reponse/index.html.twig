<!DOCTYPE html>

<title>Reponse index</title>

{% block body %}
    <h1>Reponse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id_reponse</th>
                <th>Message</th>
                <th>Datedepot</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reponse in reponses %}
            <tr>
                <td>{{ reponse.idReponse }}</td>
                <td>{{ reponse.message }}</td>
                <td>{{ reponse.datedepot ? reponse.datedepot|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reponse.status }}</td>
                <td>
                    <a href="{{ path('app_reponse_show', {'id_reponse': reponse.id_reponse}) }}">show</a>
                    <a href="{{ path('app_reponse_edit', {'id_reponse': reponse.id_reponse}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reponse_new') }}">Create new</a>
{% endblock %}
