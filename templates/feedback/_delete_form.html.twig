<form method="post" action="{{ path('app_feedback_delete', {'id': feedback.id}) }}" onsubmit="return confirm('Are you sure you want to delete this feedback?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ feedback.id) }}">
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash-alt me-2"></i> Delete
    </button>
</form>

