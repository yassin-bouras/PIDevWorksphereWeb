{% extends '/dashboard/base2.html.twig' %}

{% block title %}All Entretien History{% endblock %}

{% block content %}
    <div class="container" style="margin-top:-55%;">
       

        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">All Entretien History</h2>
                <table class="table table-bordered table-striped align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th>Action</th>
                            <th>Field Changed</th>
                            <th>Old Value</th>
                            <th>New Value</th>
                            <th>Date</th>
                            <th>Entretien ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entry in history %}
                            <tr>
                                <td>{{ entry.action }}</td>
                                <td>{{ entry.FieldChanged }}</td>
                                <td>{{ entry.oldValue }}</td>
                                <td>{{ entry.newValue }}</td>
                                <td>{{ entry.date|date('Y-m-d H:i:s') }}</td>
                                <td>{{ entry.entretien.id }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center">No records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <style>
        /* Search Form Styling */
        .search-form {
            max-width: 600px;
            margin: 0 auto;
        }

        .search-form .input-group {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        .search-form .form-control {
            border: 1px solid #dee2e6;
            height: 50px;
            font-size: 1rem;
            padding: 12px 16px;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

        .search-form .form-control:focus {
            border-color: #0052cc;
            box-shadow: 0 0 10px rgba(0, 82, 204, 0.2);
            outline: none;
        }

        .search-form .btn {
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            padding: 0 24px;
            border: none;
            transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.3s ease;
        }

        .search-form .btn-primary {
            background-color: #0052cc;
            border-radius: 0 10px 10px 0;
        }

        .search-form .btn-primary:hover {
            background-color: #003d99;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        }

        .search-form .btn-outline-secondary {
            border: 1px solid #dee2e6;
            color: #495057;
            background-color: #fff;
            border-radius: 10px 0 0 10px;
        }

        .search-form .btn-outline-secondary:hover {
            background-color: #f1f3f5;
            color: #343a40;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        }

        .search-form .fas {
            font-size: 1.1rem;
        }

        /* Card and Table Styling */
        .card {
            border: none;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            border-radius: 12px;
            background-color: #fff;
        }

        .card-body {
            padding: 2rem;
        }

        .card-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: #1a1a1a;
            margin-bottom: 1.5rem;
        }

        .table {
            width: 100%;
            margin-bottom: 0;
            border-collapse: separate;
            border-spacing: 0;
        }

        .table th {
            font-weight: 600;
            color: #343a40;
            text-transform: uppercase;
            font-size: 0.85rem;
            padding: 1rem;
            background-color: #f8f9fa;
            border-bottom: 2px solid #dee2e6;
            white-space: nowrap;
        }

        .table td {
            font-size: 0.95rem;
            color: #495057;
            padding: 1rem;
            vertical-align: middle;
            max-width: 200px; /* Prevent overly wide cells */
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f9f9f9;
        }

        .table-bordered th,
        .table-bordered td {
            border: 1px solid #e9ecef;
        }

        .table tr:hover {
            background-color: #f1f3f5;
            transition: background-color 0.2s ease;
        }

        /* Ensure no horizontal scroll */
        .table-container {
            overflow-x: hidden;
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .card-body {
                padding: 1.5rem;
            }

            .card-title {
                font-size: 1.5rem;
            }

            .table th,
            .table td {
                font-size: 0.85rem;
                padding: 0.75rem;
            }

            .search-form .form-control,
            .search-form .btn {
                height: 42px;
                font-size: 0.9rem;
            }

            .search-form .fas {
                font-size: 1rem;
            }
        }

        @media (max-width: 576px) {
            .table td {
                max-width: 150px;
            }

            .card-title {
                font-size: 1.25rem;
            }

            .search-form {
                max-width: 100%;
            }
        }
    </style>
{% endblock %}