{% extends '/home/index.html.twig' %}

{% block title %}Favori{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="mb-4" style="margin-top: 10%;margin-left: 35%;">Mes formations favorites ❤️</h2>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4 py-3">Titre</th>
                        <th class="py-3">Description</th>
                        <th class="pe-4 py-3 text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for formation in formations %}
                    <tr>
                        <td class="ps-4 align-middle">{{ formation.titre }}</td>
                        <td class="align-middle">{{ formation.description|slice(0, 100) }}...</td>
                        <td class="pe-4 align-middle text-end">
                            <a href="{{ path('app_favori_remove', {'id': favoris[loop.index0].idFavori }) }}" 
                               class="btn btn-sm btn-danger">
                                Retirer des favoris ❌
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center py-4">
                            Aucune formation en favoris
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}