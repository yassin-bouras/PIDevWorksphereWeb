{% extends '/home/index.html.twig' %}

{% block title %} Reservations {% endblock %}

{% block body %}
   <div class="container" style="margin-top:10%;">
        <h1 class="text-center mb-4">Liste des Réservations</h1>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Formation</th>
                    <th>Motif</th>
                    <th>Attente</th>
                    <th>Langue</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for reservation in reservations %}
                    <tr>
                        <td>{{ reservation.idR }}</td>
                        <td>{{ reservation.date ? reservation.date|date('Y-m-d') : 'N/A' }}</td>
                        <td>{{ reservation.formation ? reservation.formation.titre : 'Non spécifié' }}</td>
                        <td>{{ reservation.motifR }}</td>
                        <td>{{ reservation.attente }}</td>
                        <td>{{ reservation.langue }}</td>
                        <td>
                            <a class="btn btn-info btn-sm" href="{{ path('app_reservation_show', {'id_r': reservation.idR}) }}">Voir</a>
                            <a class="btn btn-warning btn-sm" href="{{ path('app_reservation_edit', {'id_r': reservation.idR}) }}">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center">Aucune réservation trouvée</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="text-center">
            <a href="{{ path('app_reservation_new') }}" class="btn btn-success">Créer une nouvelle réservation</a>
        </div>
    </div>
{% endblock %}
