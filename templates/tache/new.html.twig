{% extends '/dashboard/manager.html.twig' %}

{% block content %}

<style>
    /* Style général */
    .styled-form-wrapper .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }
    
    .styled-form-wrapper label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: #495057;
    }
    
    /* Style des inputs */
    .styled-form-wrapper input:not([type="file"]),
    .styled-form-wrapper textarea {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid #ced4da;
        border-radius: 0.375rem;
        font-size: 1rem;
        transition: all 0.3s;
        background-color: #fff;
    }

    .styled-form-wrapper select {
        width: 100%;
        padding: 0.75rem 2.5rem 0.75rem 1rem;
        border: 1px solid #ced4da;
        border-radius: 0.375rem;
        font-size: 1rem;
        appearance: none;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23343a40' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 1rem center;
        background-size: 16px 12px;
        background-color: #fff;
        transition: all 0.3s;
    }
    
    .styled-form-wrapper select:focus {
        border-color: #86b7fe;
        outline: 0;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
    
    /* Boutons */
    .btn-primary {
        background-color: #4a90e2;
        border: none;
        padding: 0.75rem 1.5rem;
    }
    
    .btn-secondary {
        background-color: #6c757d;
        border: none;
        padding: 0.75rem 1.5rem;
        margin-left: 0.5rem;
    }
    
    /* Validation */
    .is-invalid {
        border-color: #dc3545 !important;
    }
    
    .invalid-feedback {
        display: none;
        color: #dc3545;
        font-size: 0.875em;
    }
    
    .was-validated .form-control:invalid ~ .invalid-feedback,
    .form-control.is-invalid ~ .invalid-feedback {
        display: block;
    }

    /* Effets de focus */
    .styled-form-wrapper input:focus,
    .styled-form-wrapper select:focus,
    .styled-form-wrapper textarea:focus {
        border-color: #86b7fe;
        outline: 0;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    /* Card améliorée */
    .card {
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        border-radius: 10px;
        border: none;
    }

    .card-header {
        background-color: #f8f9fa;
        padding: 20px;
        border-bottom: 1px solid #eee;
    }

    .card-titles {
        margin: 0;
        font-size: 1.5rem;
        font-weight: bold;
        color: #333;
    }

</style>

<div class="content container-fluid">
    <div class="row">
        <div class="col-xl-12 col-sm-12 col-12">
            <div class="breadcrumb-path mb-4">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_dashboard_manager') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_tache_index') }}">Tâches</a></li>
                    <li class="breadcrumb-item active">Nouvelle Tâche</li>
                </ul>
                <h3>Créer une tâche</h3>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2 class="card-titles"><i class="fas fa-tasks"></i> Nouvelle Tâche</h2>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

            <div class="styled-form-wrapper">
                {{ form_widget(form) }}
            </div>

            <div class="form-actions mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
                <a href="{{ path('app_tache_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const projetSelect = document.getElementById('tache_projet');
        
        if (projetSelect) {
            projetSelect.addEventListener('change', function() {
                const projetId = this.value;
                const assigneeSelect = document.getElementById('tache_assignee');
                
                if (projetId) {
                 
                    fetch(`/tache/get-membres/${projetId}`)
                        .then(response => response.json())
                        .then(membres => {
                   
                            assigneeSelect.innerHTML = '';
                            
                      
                            const defaultOption = document.createElement('option');
                            defaultOption.value = '';
                            defaultOption.textContent = membres.length > 0 
                                ? `Choisir un employée (${membres.length})` 
                                : 'Aucun membre dans ce projet';
                            assigneeSelect.appendChild(defaultOption);
                            
                      
                            membres.forEach(membre => {
                                const option = document.createElement('option');
                                option.value = membre.id;
                                option.textContent = membre.nomComplet;
                                assigneeSelect.appendChild(option);
                            });
                        });
                } else {
            
                    assigneeSelect.innerHTML = '';
                    const defaultOption = document.createElement('option');
                    defaultOption.value = '';
                    defaultOption.textContent = 'Sélectionnez un projet';
                    assigneeSelect.appendChild(defaultOption);
                }
            });
        }
    });
    </script>
{% endblock %}
{% endblock %}
