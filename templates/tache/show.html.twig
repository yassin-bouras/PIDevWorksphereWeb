{% extends '/dashboard/manager.html.twig' %}

{% block content %}
<div class="content container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-12">
                <h3 class="page-title">Détails de la Tâche</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_dashboard_manager') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_tache_index') }}">Tâches</a></li>
                    <li class="breadcrumb-item active">Détails</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-8 col-sm-12 col-12 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-titles">{{ tache.titre }}</h2>
                    <div class="priority-badge priority-{{ tache.priorite }}">
                        Priorité: {{ tache.priorite }}
                    </div>
                </div>
                
                <div class="card-body">
                    <div class="task-details">
                        <div class="detail-row">
                            <div class="detail-label">Projet</div>
                            <div class="detail-value">
                                
                                    {{ tache.projet.nom }}
                                
                            </div>
                        </div>

                        <div class="detail-row">
                            <div class="detail-label">Assigné à</div>
                            <div class="detail-value">
                                {% if tache.assignee %}
                                    <i class="fas fa-user"></i> 
                                    {{ tache.assignee.nom }} {{ tache.assignee.prenom }}
                                    <small class="text-muted">({{ tache.assignee.email }})</small>
                                {% else %}
                                    <span class="text-muted">Non assigné</span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="detail-row">
                            <div class="detail-label">Description</div>
                            <div class="detail-value">{{ tache.description|nl2br }}</div>
                        </div>
                        
                        <div class="detail-row">
                            <div class="detail-label">Statut</div>
                            <div class="detail-value">
                                <span class="status-badge status-{{ tache.statut|lower|replace({' ': '-'}) }}">
                                    {{ tache.statut }}
                                </span>
                            </div>
                        </div>
                        
                        <div class="detail-row">
                            <div class="detail-label">Date début</div>
                            <div class="detail-value">
                                <i class="far fa-calendar-alt"></i> 
                                {{ tache.dateCreation ? tache.dateCreation|date('d/m/Y') : 'Non définie' }}
                            </div>
                        </div>
                        
                        <div class="detail-row">
                            <div class="detail-label">Échéance</div>
                            <div class="detail-value">
                                <i class="far fa-calendar-alt"></i> 
                                {{ tache.deadline ? tache.deadline|date('d/m/Y') : 'Non définie' }}
                                {% if tache.deadline and tache.deadline < date() %}
                                    <span class="badge bg-danger">En retard</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <div>
                                <a href="{{ path('app_tache_index') }}" class="btn btn-primary">
                                    <i class="fas fa-arrow-left mr-1"></i> Retour
                                </a>
                            </div>
                            
                            <div>
                        
                                <form method="post" action="{{ path('app_tache_delete', {'id': tache.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette tâche ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tache.id) }}">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash-alt mr-1"></i> Supprimer
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    
                

                  

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .task-details {
        padding: 20px;
        background: #f8f9fa;
        border-radius: 8px;
    }
    
    .detail-row {
        display: flex;
        margin-bottom: 15px;
        padding-bottom: 15px;
        border-bottom: 1px solid #e9ecef;
    }
    
    .detail-row:last-child {
        border-bottom: none;
        margin-bottom: 0;
        padding-bottom: 0;
    }
    
    .detail-label {
        width: 180px;
        font-weight: 600;
        color: #495057;
    }
    
    .detail-value {
        flex: 1;
        color: #212529;
    }
    
    .priority-badge {
        display: inline-block;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
        color: white;
    }
    
    .priority-1 { background: #28a745; }
    .priority-2 { background: #17a2b8; }
    .priority-3 { background: #ffc107; color: #212529; }
    .priority-4 { background: #fd7e14; }
    .priority-5 { background: #dc3545; }
    
    .status-badge {
        display: inline-block;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
    }
    
    .status-a-faire { background: #6c757d; color: white; }
    .status-en-cours { background: #007bff; color: white; }
    .status-termine { background: #28a745; color: white; }
    
    .task-actions .btn {
        margin-right: 10px;
    }
    
    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .card-footer {
                            background-color: #f8f9fa;
                            border-top: 1px solid rgba(0,0,0,.125);
                            padding: 1rem 1.25rem;
                        }
                        
                        .btn {
                            padding: 0.375rem 0.75rem;
                        }
                        
                        .btn i {
                            margin-right: 0.25rem;
                        }
</style>
{% endblock %}