{% extends '/dashboard/base.html.twig' %}

{% block title %}Détails du Sponsor - {{ sponsor.nomSponso }}{% endblock %}

{% block content %}
<div class="content container-fluid">
    <div class="row">
        <div class="col-xl-12 col-sm-12 col-12">
            <div class="breadcrumb-path mb-4">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_sponsor_index') }}">Sponsors</a></li>
                    <li class="breadcrumb-item active">Détails du Sponsor</li>
                </ul>
                <h3>Détails du Sponsor</h3>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-titles">{{ sponsor.nomSponso }} {{ sponsor.prenomSponso }} <span>Fiche détaillée du partenaire</span></h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-xl-6 col-sm-12 col-12">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h4 class="card-title">Budget</h4>
                                </div>
                                <div class="card-body">
                                    <div class="stats-info">
                                        <div class="stats-info-details">
                                            <div class="stats-info-content">
                                                <h6>Budget Initial</h6>
                                                <h4>{{ sponsor.budgetSponso }} €</h4>
                                            </div>
                                        </div>
                                        <div class="stats-info-details mt-3">
                                            <div class="stats-info-content">
                                                <h6>Budget Après Réduction</h6>
                                                <h4>{{ sponsor.BudgetApresReduction }} €</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-6 col-sm-12 col-12">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h4 class="card-title">Informations Générales</h4>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table">
                                            <tbody>
                                                <tr>
                                                    <td><strong>Email</strong></td>
                                                    <td>{{ sponsor.emailSponso }}</td>
                                                </tr>
                                                <tr>
                                                    <td><strong>Classement</strong></td>
                                                    <td>
                                                        <span class="badge bg-info-light">{{ sponsor.classement }}</span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td><strong>Secteur d'activité</strong></td>
                                                    <td>{{ sponsor.secteurSponsor }}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xl-12 col-sm-12 col-12">
                            <div class="form-btn">
                                <a href="{{ path('app_sponsor_index') }}" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Retour à la liste
                                </a>
                                <a href="{{ path('app_sponsor_edit', {'idSponsor': sponsor.idSponsor}) }}" class="btn btn-apply">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmation de suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Êtes-vous sûr de vouloir supprimer définitivement ce sponsor ? Cette action est irréversible.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form method="post" action="{{ path('app_sponsor_delete', {'idSponsor': sponsor.idSponsor}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sponsor.idSponsor) }}">
                    <button type="submit" class="btn btn-danger">Confirmer la suppression</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}