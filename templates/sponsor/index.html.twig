{% extends '/home/index.html.twig' %}

{% block title %}Sponsors{% endblock %}

{% block body %}
    <div class="container" style="margin-top:10%;">
        <h1 class="text-center mb-4">Liste des Sponsors</h1>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                   
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Budget</th>
                    <th>Classement</th>
                    <th>Budget Après Réduction</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for sponsor in sponsors %}
                    <tr>
                        
                        <td>{{ sponsor.nomSponso }}</td>
                        <td>{{ sponsor.prenomSponso }}</td>
                        <td>{{ sponsor.emailSponso }}</td>
                        <td>{{ sponsor.budgetSponso }}</td>
                        <td>{{ sponsor.classement }}</td>
                        <td>{{ sponsor.BudgetApresReduction }}</td>
                        <td>
                            <a class="btn btn-info btn-sm" href="{{ path('app_sponsor_show', {'idSponsor': sponsor.idSponsor}) }}">Voir</a>
                            <a class="btn btn-warning btn-sm" href="{{ path('app_sponsor_edit', {'idSponsor': sponsor.idSponsor}) }}">Modifier</a>
                            <a class="btn btn-primary btn-sm" href="{{ path('app_evenement_sponsor_new') }}?sponsor_id={{ sponsor.idSponsor }}">Affecter un événement</a>
                            <a class="btn btn-success btn-sm" href="{{ path('app_sponsor_events', {'idSponsor': sponsor.idSponsor}) }}">Voir les événements</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">Aucun sponsor trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="text-center">
            <a href="{{ path('app_sponsor_new') }}" class="btn btn-success">Créer un nouveau sponsor</a>
        </div>
    </div>
{% endblock %}