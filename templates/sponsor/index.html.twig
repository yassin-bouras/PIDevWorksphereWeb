{% extends '/dashboard/base.html.twig' %}

{% block title %}Sponsors{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .bg-bronze {
            background-color: #cd7f32; /* Couleur bronze */
        }
        /* Assure que le texte est blanc sur tous les badges de classement */
        .badge.bg-warning.text-white,
        .badge.bg-secondary.text-white,
        .badge.bg-bronze.text-white {
            color: white !important;
        }
    </style>
{% endblock %}
{% block content %}
    <div class="content container-fluid" style="margin-top: -52%;">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-12">
                    <h3 class="page-title">Liste des Sponsors</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Dashboard</a></li>
                        <li class="breadcrumb-item active">Sponsors</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="text-end mb-4">
                            <a href="{{ path('app_sponsor_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Créer un nouveau sponsor
                            </a>
                        </div>

                        <div class="mb-4">
                            <form method="GET" action="{{ path('app_sponsor_index') }}" class="row">
                                <div class="col-md-6 mb-2">
                                    <div class="input-group">
                                        <input type="text" name="search" class="form-control" placeholder="Rechercher par nom ou prénom" value="{{ app.request.query.get('search') }}">
                                        <button class="btn btn-outline-primary" type="submit">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <select name="budget" id="budget" class="form-select">
                                        <option value="">Tous les budgets</option>
                                        <option value="moins_10000" {% if app.request.query.get('budget') == 'moins_10000' %}selected{% endif %}>Moins de 10 000 €</option>
                                        <option value="entre_10000_50000" {% if app.request.query.get('budget') == 'entre_10000_50000' %}selected{% endif %}>Entre 10 000 € et 50 000 €</option>
                                        <option value="plus_50000" {% if app.request.query.get('budget') == 'plus_50000' %}selected{% endif %}>Plus de 50 000 €</option>
                                    </select>
                                </div>
                                <div class="col-md-2 mb-2">
                                    <button class="btn btn-outline-secondary w-100" type="submit">Filtrer</button>
                                </div>
                            </form>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0">
                                <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Email</th>
                                        <th>Budget</th>
                                        <th>Budget après réduction</th>
                                        <th>Classement</th>
                                        <th>Secteur</th> <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for sponsor in sponsors %}
                                        <tr>
                                            <td>{{ sponsor.nomSponso }} {{ sponsor.prenomSponso }}</td>
                                            <td>{{ sponsor.emailSponso }}</td>
                                            <td>{{ sponsor.budgetSponso }} €</td>
                                            <td>{{ sponsor.getBudgetApresReduction }} €</td>
                                            <td>
                                                <span class="badge 
                                                    {% if sponsor.getClassement == 'Or' %}bg-warning
                                                    {% elseif sponsor.getClassement == 'Argent' %}bg-secondary
                                                    {% else %}bg-bronze{% endif %} text-white">
                                                    <i class="fas 
                                                        {% if sponsor.getClassement == 'Or' %}fa-trophy
                                                        {% elseif sponsor.getClassement == 'Argent' %}fa-medal
                                                        {% else %}fa-award{% endif %} me-1"></i>
                                                    {{ sponsor.getClassement }}
                                                </span>
                                            </td>
                                            <td>{{ sponsor.secteurSponsor }}</td> <td>
                                                <div class="d-flex">
                                                    <a href="{{ path('app_sponsor_show', {'idSponsor': sponsor.idSponsor}) }}" class="btn btn-sm btn-outline-primary me-1" title="Voir">
                                                        <i class="far fa-eye"></i>
                                                    </a>
                                                    <a href="{{ path('app_sponsor_edit', {'idSponsor': sponsor.idSponsor}) }}" class="btn btn-sm btn-outline-warning me-1" title="Modifier">
                                                        <i class="far fa-edit"></i>
                                                    </a>
                                                    <a href="{{ path('app_evenement_sponsor_new') }}?sponsor_id={{ sponsor.idSponsor }}" class="btn btn-sm btn-outline-success me-1" title="Affecter événement">
                                                        <i class="fas fa-calendar-plus"></i>
                                                    </a>
                                                    <a href="{{ path('app_sponsor_events', {'idSponsor': sponsor.idSponsor}) }}" class="btn btn-sm btn-outline-info me-1" title="Événements">
                                                        <i class="fas fa-list"></i>
                                                    </a>
                                                    <form method="post" action="{{ path('app_sponsor_delete', {'idSponsor': sponsor.idSponsor}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce sponsor ?');">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sponsor.idSponsor) }}">
                                                        <button class="btn btn-sm btn-outline-danger" title="Supprimer">
                                                            <i class="far fa-trash-alt"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="7" class="text-center">Aucun sponsor trouvé</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}