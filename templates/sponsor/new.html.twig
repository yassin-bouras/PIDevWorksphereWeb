{% extends '/dashboard/base.html.twig' %}

{% block title %}Nouveau Sponsor{% endblock %}

{% block content %}
<div class="content container-fluid">
    <div class="row">
        <div class="col-xl-12 col-sm-12 col-12">
            <div class="breadcrumb-path mb-4">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_sponsor_index') }}">Sponsors</a></li>
                    <li class="breadcrumb-item active">Nouveau Sponsor</li>
                </ul>
                <h3>Créer un Nouveau Sponsor</h3>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-titles">Informations du Sponsor <span>Remplissez tous les champs obligatoires</span></h2>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'id': 'sponsor-form', 'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                    <div class="row">
                        <div class="col-xl-6 col-sm-12 col-12">
                            <div class="form-group">
                                {{ form_label(form.nomSponso, "Nom*") }}
                                {{ form_widget(form.nomSponso, {
                                    'attr': {
                                        'class': 'form-control' ~ (form.nomSponso.vars.errors|length ? ' is-invalid' : ''),
                                        'required': 'required',
                                        'minlength': '2',
                                        'placeholder': 'Nom du sponsor'
                                    }
                                }) }}
                                {% if form.nomSponso.vars.errors %}
                                    <div class="invalid-feedback d-block">
                                        {% for error in form.nomSponso.vars.errors %}
                                            {{ error.message }}
                                        {% endfor %}
                                    </div>
                                {% else %}
                                    <div class="invalid-feedback">
                                        Le nom doit contenir au moins 2 caractères
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        
                        <div class="col-xl-6 col-sm-12 col-12">
                            <div class="form-group">
                                {{ form_label(form.prenomSponso, "Prénom") }}
                                {{ form_widget(form.prenomSponso, {
                                    'attr': {
                                        'class': 'form-control' ~ (form.prenomSponso.vars.errors|length ? ' is-invalid' : ''),
                                        'placeholder': 'Prénom du sponsor'
                                    }
                                }) }}
                                {% if form.prenomSponso.vars.errors %}
                                    <div class="invalid-feedback d-block">
                                        {% for error in form.prenomSponso.vars.errors %}
                                            {{ error.message }}
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xl-6 col-sm-12 col-12">
                            <div class="form-group">
                                {{ form_label(form.emailSponso, "Email*") }}
                                {{ form_widget(form.emailSponso, {
                                    'attr': {
                                        'class': 'form-control' ~ (form.emailSponso.vars.errors|length ? ' is-invalid' : ''),
                                        'required': 'required',
                                        'type': 'email',
                                        'pattern': '[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$',
                                        'placeholder': 'exemple@domaine.com'
                                    }
                                }) }}
                                {% if form.emailSponso.vars.errors %}
                                    <div class="invalid-feedback d-block">
                                        {% for error in form.emailSponso.vars.errors %}
                                            {{ error.message }}
                                        {% endfor %}
                                    </div>
                                {% else %}
                                    <div class="invalid-feedback">
                                        Veuillez entrer une adresse email valide
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        
                        <div class="col-xl-6 col-sm-12 col-12">
                            <div class="form-group">
                                {{ form_label(form.classement, "Classement") }}
                                {{ form_widget(form.classement, {
                                    'attr': {
                                        'class': 'form-control' ~ (form.classement.vars.errors|length ? ' is-invalid' : ''),
                                        'placeholder': 'A, B, C...'
                                    }
                                }) }}
                                {% if form.classement.vars.errors %}
                                    <div class="invalid-feedback d-block">
                                        {% for error in form.classement.vars.errors %}
                                            {{ error.message }}
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xl-6 col-sm-12 col-12">
                            <div class="form-group">
                                {{ form_label(form.budgetSponso, "Budget Initial*") }}
                                <div class="input-group">
                                    {{ form_widget(form.budgetSponso, {
                                        'attr': {
                                            'class': 'form-control' ~ (form.budgetSponso.vars.errors|length ? ' is-invalid' : ''),
                                            'required': 'required',
                                            'type': 'number',
                                            'min': '0',
                                            'step': '0.01',
                                            'placeholder': 'Montant en €'
                                        }
                                    }) }}
                                    <div class="input-group-append">
                                        <span class="input-group-text">€</span>
                                    </div>
                                </div>
                                {% if form.budgetSponso.vars.errors %}
                                    <div class="invalid-feedback d-block">
                                        {% for error in form.budgetSponso.vars.errors %}
                                            {{ error.message }}
                                        {% endfor %}
                                    </div>
                                {% else %}
                                    <div class="invalid-feedback">
                                        Le budget doit être un nombre positif
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        
                        <div class="col-xl-6 col-sm-12 col-12">
                            <div class="form-group">
                                {{ form_label(form.BudgetApresReduction, "Budget Après Réduction*") }}
                                <div class="input-group">
                                    {{ form_widget(form.BudgetApresReduction, {
                                        'attr': {
                                            'class': 'form-control' ~ (form.BudgetApresReduction.vars.errors|length ? ' is-invalid' : ''),
                                            'required': 'required',
                                            'type': 'number',
                                            'min': '0',
                                            'step': '0.01',
                                            'placeholder': 'Montant en €'
                                        }
                                    }) }}
                                    <div class="input-group-append">
                                        <span class="input-group-text">€</span>
                                    </div>
                                </div>
                                {% if form.BudgetApresReduction.vars.errors %}
                                    <div class="invalid-feedback d-block">
                                        {% for error in form.BudgetApresReduction.vars.errors %}
                                            {{ error.message }}
                                        {% endfor %}
                                    </div>
                                {% else %}
                                    <div class="invalid-feedback">
                                        Le budget doit être un nombre positif
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xl-12 col-sm-12 col-12">
                            <div class="form-btn">
                                <button type="submit" class="btn btn-apply w-auto">
                                    <i class="fas fa-save"></i> Enregistrer
                                </button>
                                <a href="{{ path('app_sponsor_index') }}" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Annuler
                                </a>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
$(document).ready(function() {
    // Validation en temps réel
    function validateField(field) {
        const $field = $(field);
        $field.removeClass('is-invalid is-valid');
        
        if (field.checkValidity()) {
            $field.addClass('is-valid');
        } else {
            $field.addClass('is-invalid');
        }
    }

    // Validation spécifique pour les emails
    function validateEmailField(field) {
        const emailRegex = /^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$/i;
        const $field = $(field);
        
        $field.removeClass('is-invalid is-valid');
        
        if (emailRegex.test(field.value)) {
            $field.addClass('is-valid');
            field.setCustomValidity('');
        } else {
            $field.addClass('is-invalid');
            field.setCustomValidity('Veuillez entrer une adresse email valide');
        }
    }

    // Validation spécifique pour les nombres
    function validateNumberField(field) {
        const $field = $(field);
        const value = parseFloat(field.value);
        
        $field.removeClass('is-invalid is-valid');
        
        if (!isNaN(value) && value >= 0) {
            $field.addClass('is-valid');
            field.setCustomValidity('');
        } else {
            $field.addClass('is-invalid');
            field.setCustomValidity('Veuillez entrer un nombre positif');
        }
    }

    // Événements de validation
    $('#sponsor-form').on('blur', 'input, textarea', function() {
        if ($(this).attr('type') === 'email') {
            validateEmailField(this);
        } else if ($(this).attr('type') === 'number') {
            validateNumberField(this);
        } else {
            validateField(this);
        }
    });

    $('#sponsor-form').on('input', 'input, textarea', function() {
        if ($(this).hasClass('is-invalid')) {
            if ($(this).attr('type') === 'email') {
                validateEmailField(this);
            } else if ($(this).attr('type') === 'number') {
                validateNumberField(this);
            } else {
                validateField(this);
            }
        }
    });

    // Validation au submit
    $('#sponsor-form').on('submit', function(e) {
        // Valider tous les champs
        $(this).find('input, textarea').each(function() {
            if ($(this).attr('type') === 'email') {
                validateEmailField(this);
            } else if ($(this).attr('type') === 'number') {
                validateNumberField(this);
            } else {
                validateField(this);
            }
        });

        if (!this.checkValidity()) {
            e.preventDefault();
            e.stopPropagation();
        }
        
        $(this).addClass('was-validated');
    });
});
</script>
{% endblock %}