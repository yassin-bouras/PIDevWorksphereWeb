{% extends '/dashboard/base.html.twig' %}

{% block title %}Événements de {{ sponsor.nomSponso }}{% endblock %}

{% block content %}
<div class="content container-fluid" style="margin-top: -52%;">
    <div class="row">
        <div class="col-xl-12 col-sm-12 col-12">
            <div class="breadcrumb-path mb-4">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_sponsor_index') }}">Sponsors</a></li>
                    <li class="breadcrumb-item active">Événements de {{ sponsor.nomSponso }}</li>
                </ul>
                <h3>Événements sponsorisés</h3>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-titles">Événements de {{ sponsor.nomSponso }} <span>Liste des partenariats événementiels</span></h2>
                    <div class="card-actions">
                        <a href="{{ path('app_evenement_sponsor_new', {'sponsor_id': sponsor.idSponsor}) }}" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Ajouter un partenariat
                        </a>
                        <a href="{{ path('app_sponsor_events_pdf', {'idSponsor': sponsor.idSponsor}) }}" class="btn btn-outline-secondary ms-2" target="_blank">
                            <i class="fas fa-file-pdf me-2"></i>Générer PDF
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-center mb-0">
                            <thead class="thead-light">
                                <tr>
                                    <th>Événement</th>
                                    <th>Date début contrat</th>
                                    <th>Date fin contrat</th>
                                    <th>Durée</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                               {% for evenement_sponsor in evenement_sponsors %}
    {# Calcul de la date de fin #}
    {% set dateFin = null %}
    {% if evenement_sponsor.datedebutContrat and evenement_sponsor.duree %}
        {# Créer un objet DateTime à partir de la date de début #}
        {% set dateDebut = evenement_sponsor.datedebutContrat|date('Y-m-d') %}
        {% set dateFin = date(dateDebut) %}
        
        {# Appliquer la durée en fonction de la valeur de duree #}
        {% if evenement_sponsor.duree == 'troisMois' %}
            {% set dateFin = dateFin.modify('+3 months') %}
        {% elseif evenement_sponsor.duree == 'sixMois' %}
            {% set dateFin = dateFin.modify('+6 months') %}
        {% elseif evenement_sponsor.duree == 'unAns' %}
            {% set dateFin = dateFin.modify('+1 year') %}
        {% endif %}
    {% endif %}

                                    <tr class="{{ dateFin and dateFin < date() ? 'table-danger' : '' }}">
                                        <td>
                                            <h6 class="mb-0">{{ evenement_sponsor.evenement.nomEvent }}</h6>
                                            <small class="text-muted">{{ evenement_sponsor.evenement.lieuEvent }}</small>
                                        </td>
                                        <td>{{ evenement_sponsor.datedebutContrat ? evenement_sponsor.datedebutContrat|date('d/m/Y') : 'N/A' }}</td>
                                        <td>
                                            {{ dateFin ? dateFin|date('d/m/Y') : 'N/A' }}
                                            {% if dateFin and dateFin < date() %}
                                                <span class="badge bg-danger ms-2">Expiré</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if evenement_sponsor.duree == 'troisMois' %}
                                                3 Mois
                                            {% elseif evenement_sponsor.duree == 'sixMois' %}
                                                6 Mois
                                            {% elseif evenement_sponsor.duree == 'unAns' %}
                                                1 An
                                            {% else %}
                                                {{ evenement_sponsor.duree ?? 'N/A' }}
                                            {% endif %}
                                        </td>
                                        <td class="text-end">
                                            <div class="actions">
                                                <a href="{{ path('app_evenement_sponsor_show', {'evenement_id': evenement_sponsor.evenement.idEvent, 'sponsor_id': sponsor.idSponsor}) }}"
                                                   class="btn btn-sm {{ dateFin and dateFin < date() ? 'bg-danger-light' : 'bg-info-light' }} me-2"
                                                   data-bs-toggle="tooltip" title="Voir détails">
                                                    <i class="fas fa-eye"></i>
                                                </a>


                                                <form method="post" action="{{ path('app_evenement_sponsor_delete', {'evenement_id': evenement_sponsor.evenement.idEvent, 'sponsor_id': sponsor.idSponsor}) }}" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement_sponsor.evenement.idEvent ~ evenement_sponsor.sponsor.idSponsor) }}">
                                                    <button type="submit" class="btn btn-sm bg-danger-light"
                                                            data-bs-toggle="tooltip" title="Supprimer la liaison"
                                                            onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette liaison entre le sponsor et l\'événement ?');">
                                                        <i class="fas fa-unlink"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center py-4">
                                            <div class="empty-table">
                                                <i class="fas fa-calendar-times fa-2x text-muted mb-3"></i>
                                                <p class="mb-0">Aucun événement trouvé pour ce sponsor</p>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-4 text-center">
                        <a href="{{ path('app_sponsor_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour aux sponsors
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .table-danger {
        background-color: rgba(220, 53, 69, 0.1) !important;
    }
    .table-danger td {
        border-color: #f1aeb5 !important;
    }
    .bg-danger-light {
        background-color: #f8d7da;
        color: #b02a37;
    }
    .bg-danger-light:hover {
        background-color: #f1aeb5;
        color: #fff;
    }
    .actions .btn {
        min-width: 30px;
        padding: 0.25rem 0.5rem;
    }
    .actions form {
        display: inline-block;
    }
    .card-actions {
        float: right;
    }
</style>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
$(document).ready(function() {
    // Activation des tooltips
    $('[data-bs-toggle="tooltip"]').tooltip();
});
</script>
{% endblock %}