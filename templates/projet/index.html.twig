<!DOCTYPE html>

<title>Projet index</title>

{% block body %}
    <h1>Projet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Datecréation</th>
                <th>Deadline</th>
                <th>Etat</th>
                <th>ImageProjet</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for projet in projets %}
            <tr>
                <td>{{ projet.id }}</td>
                <td>{{ projet.nom }}</td>
                <td>{{ projet.description }}</td>
                <td>{{ projet.datecréation ? projet.datecréation|date('Y-m-d') : '' }}</td>
                <td>{{ projet.deadline ? projet.deadline|date('Y-m-d') : '' }}</td>
                <td>{{ projet.etat }}</td>
                <td>{{ projet.imageProjet }}</td>
                <td>
                    <a href="{{ path('app_projet_show', {'id': projet.id}) }}">show</a>
                    <a href="{{ path('app_projet_edit', {'id': projet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_projet_new') }}">Create new</a>
{% endblock %}
