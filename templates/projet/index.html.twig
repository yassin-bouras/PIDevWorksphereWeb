
{% extends '/dashboard/manager.html.twig' %}

{% block content %}

<div class="content container-fluid" style="margin-top: -50.5%;">

    <div class="row">
        <div class="col-xl-12 col-sm-12 col-12 mb-4">
        <h3 class="page-title">Liste des Projets</h3>
        <div class="breadcrumb-path ">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"> <img src="{{ asset('back/img/home.svg') }}"> <a href="{{ path('app_dashboard_manager') }}">Accueil</a></li>
        </li>
        <li class="breadcrumb-item active">Projets</li>
    </ul>
        <h3>Projets</h3>
        </div>
        </div>
    </div>

    <div class="col-xl-8 col-sm-8 col-8 mb-2">
        <div class="head-link-set">
       
            <a class="btn-add" href="{{ path('app_projet_new') }}">
                <i class="fas fa-plus"></i> Créer un nouveau projet
            </a>
        </div>
    </div>
    
    <div class="container" style="margin-top:7%;">

        <div class="mb-4">
            <form method="GET" action="{{ path('app_projet_index') }}">
                <div class="input-group">
                    <!-- Champ pour rechercher par nom -->
                    <input type="text" name="search" class="form-control" placeholder="Rechercher un projet" value="{{ app.request.query.get('search') }}">

                    <!-- Sélection du statut -->
                    <select name="etat" class="form-control" style="width: 150px;">
                        <option value="">-- Sélectionner un statut --</option>
                        <option value="Terminé" {% if app.request.query.get('etat') == 'Terminé' %}selected{% endif %}>Terminé</option>
                        <option value="Annulé" {% if app.request.query.get('etat') == 'Annulé' %}selected{% endif %}>Annulé</option>
                        <option value="EnCours" {% if app.request.query.get('etat') == 'EnCours' %}selected{% endif %}>En Cours</option>
                    </select>

                    <!-- Champ pour rechercher par nom d'équipe -->
                    <input type="text" name="nomEquipe" class="form-control" placeholder="Nom de l'équipe" value="{{ app.request.query.get('nom_equipe') }}">

                    <!-- Bouton de soumission -->
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit">Rechercher</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="project-grid" style="max-width: 1060px; margin: 0 auto;">
            {% for projet in projets %}
                <div class="project-card" style="background: white; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); padding: 20px; margin-bottom: 25px; display: flex; align-items: center;">
                    
                    <!-- Image du projet à gauche -->
                    {% if projet.imageProjet %}
                        <div class="project-image" style="margin-right: 15px;">
                            <img src="{{ asset(projet.imageProjet) }}" alt="Image du projet" width="80" height="80" style="object-fit: cover; border-radius: 50%;">
                        </div>
                    {% endif %}

                    <div style="flex: 1;">
                        <div class="project-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;">
                            <h2 style="margin: 0; font-size: 1.5rem; color: #333;">{{ projet.nom }}</h2>
                            <span class="chip chip-{{ projet.etat }}" style="padding: 6px 12px; border-radius: 20px; font-weight: bold; font-size: 0.9rem; color: white;">{{ projet.etat }}</span>
                        </div>
                        
                        <div class="project-info" style="margin-bottom: 10px;">
                            <p style="margin: 5px 0; color: #555;"><strong>Description:</strong> {{ projet.description }}</p>
                            <p style="margin: 5px 0; color: #555;"><strong>Date début:</strong> {{ projet.dateCreation ? projet.dateCreation|date('Y-m-d') : 'N/A' }}</p>
                            <p style="margin: 5px 0; color: #555;"><strong>Deadline:</strong> {{ projet.deadline ? projet.deadline|date('Y-m-d') : 'N/A' }}</p>
                        </div>

                        <div class="project-actions" style="display: flex; gap: 10px;">
                            <a class="btn" href="{{ path('app_projet_show', {'id': projet.id}) }}" style="background-color: #4a6fa5; color: white; padding: 8px 15px; border-radius: 5px; text-decoration: none; font-size: 0.9rem;">Voir</a>
                            <a class="btn" href="{{ path('app_projet_edit', {'id': projet.id}) }}" style="background-color: #e67e22; color: white; padding: 8px 15px; border-radius: 5px; text-decoration: none; font-size: 0.9rem;">Modifier</a>
                            <a href="#" class="btn" style="background-color: #e74c3c; color: white; padding: 8px 15px; border-radius: 5px; text-decoration: none; font-size: 0.9rem; border: none;" class="action_label5" data-toggle="modal" data-target="#deleteModal{{ projet.id }}">
                               Supprimer
                            </a>


    

                        </div>

                      

                    </div>
                </div>

             
                                     <!-- Modal de suppression pour chaque équipe -->
                                     <div class="modal fade" id="deleteModal{{ projet.id }}" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel{{ projet.id }}" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header text-center border-0">
                                                    <h5 class="modal-title" id="deleteModalLabel{{ projet.id }}">Êtes-vous sûr de vouloir supprimer?</h5>
                                                </div>
                                                <div class="modal-body text-center">
                                                    <p>Vous êtes sur le point de supprimer le projet "{{ projet.nom }}". Cette action est irréversible.</p>
                                                </div>
                                                <div class="modal-footer text-center border-0">
                                                    <form action="{{ path('app_projet_delete', {'id': projet.id}) }}" method="post" style="display: inline;">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ projet.id) }}">
                                                        <input type="hidden" name="_method" value="DELETE">
                                                        <button type="submit" class="btn btn-danger">Supprimer</button>
                                                    </form>
                                                    <button style="background-color: #2f8f37;" type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

            {% else %}
                <div class="no-projects" style="text-align: center; padding: 40px; background: white; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
                    <p style="font-size: 1.2rem; color: #777;">Aucun projet trouvé</p>
                </div>
            {% endfor %}

            <div class="card-footer">
                <div class="pagination">
                    {{ knp_pagination_render(projets) }}
                </div>
            </div> 
            
        </div>

       
    </div>

    <style>
        .btn:hover {
            opacity: 0.9;
            transform: translateY(-1px);
        }
        .project-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .project-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        /* Couleurs des états */
        .chip-Terminé { background-color: #28a745; }
        .chip-EnCours { background-color: #007bff; }
        .chip-Annulé { background-color: #dc3545; }

        .pagination {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }
    .pagination ul {
        display: flex;
        list-style: none;
        padding: 0;
        margin: 0;
    }
    .pagination li {
        margin: 0 3px;
    }
    .pagination a, 
    .pagination span {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    .pagination a {
        color: #6c757d;
        border: 1px solid #dee2e6;
        background-color: white;
    }
    .pagination a:hover {
        background-color: #f8f9fa;
        color: #4e73df;
        border-color: #4e73df;
    }
    .pagination .active span {
        background-color: #4e73df;
        color: white;
        border: 1px solid #4e73df;
        box-shadow: 0 2px 5px rgba(78, 115, 223, 0.3);
    }
    .pagination .disabled span {
        color: #adb5bd;
        background-color: #f8f9fa;
        border-color: #dee2e6;
        cursor: not-allowed;
    }
    </style>
{% endblock %}