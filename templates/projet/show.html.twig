<!DOCTYPE html>
<title>Projet</title>

{% block body %}
    <h1>Projet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ projet.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ projet.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ projet.description }}</td>
            </tr>
            <tr>
                <th>Date création</th>
                <td>{{ projet.dateCreation ? projet.dateCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Deadline</th>
                <td>{{ projet.deadline ? projet.deadline|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ projet.etat }}</td>
            </tr>
            <tr>
                <th>Image Projet</th>
                <td><img src="{{ asset(projet.imageProjet) }}" alt="Image du projet" width="100"></td>
            </tr>
            {# Ajout des informations de l'équipe #}
            <tr>
                <th>Équipe assignée</th>
                <td>
                    {% if projet.equipe %}
                        <div class="d-flex align-items-center">
                            <img src="{{ asset(projet.equipe.imageEquipe) }}" 
                                 alt="Image de l'équipe {{ projet.equipe.nomEquipe }}" 
                                 width="80" 
                                 class="mr-3">
                            <span>{{ projet.equipe.nomEquipe }}</span>
                        </div>
                    {% else %}
                        <span class="text-muted">Aucune équipe assignée</span>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('app_projet_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_projet_edit', {'id': projet.id}) }}" class="btn btn-primary">Modifier</a>
    </div>

    {{ include('projet/_delete_form.html.twig') }}
{% endblock %}